<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout"
    android:background="#ffffff">
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/doctorImg"
        android:layout_margin="5dp"
        android:background="@drawable/doctor_image"
     />
    <ImageView
        android:layout_width="25dp"
        android:layout_height="13dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/doctorImg"
        android:id="@+id/downImg"
        android:scaleType="fitCenter"
        android:background="@drawable/down_arrow"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/doctorImg"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Doctor Name"
            android:id="@+id/doctorName"
            android:fontFamily="sans-serif"
            style="@style/sub_heading"
         />

        <Button
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:id="@+id/nextBtn"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/right_arrow_black"
            android:textColor="#000000"

         />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height= "wrap_content"
            android:layout_toLeftOf="@+id/nextBtn"
            android:text="52"
            android:id="@+id/total_shift_count"
            style="@style/body2"
            android:layout_marginTop="10dp"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Speciality"
            android:id="@+id/doctorSpeciality"
            style="@style/body2"
            android:layout_below="@+id/doctorName"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Todayâ€™s Appointments : "
            style="@style/body1"
            android:id="@+id/lastAppointmentDate"
            android:layout_below="@+id/doctorSpeciality"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upcoming Visit:  "
            android:textSize="10sp"
            android:visibility="gone"
            android:id="@+id/upcomingText"
            android:layout_below="@+id/lastAppointmentDate"
            android:textColor="#000000"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12-04-2015"
            android:textSize="10sp"
            android:visibility="gone"
            android:layout_toRightOf="@+id/upcomingText"
            android:layout_below="@+id/lastAppointmentDate"
            android:textColor="#1E90FF"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/content_linear"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:layout_below="@+id/upcomingText">
