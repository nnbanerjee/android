<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout"
    android:background="#ffffff">
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/doctorImg"
        android:layout_margin="5dp"
        android:background="@drawable/doctor_image"
     />
    <ImageView
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/doctorImg"
        android:id="@+id/downImg"
        android:scaleType="fitXY"
        android:background="@drawable/down_arrow"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/doctorImg"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Doctor Name"
            android:id="@+id/doctorName"
            android:fontFamily="sans-serif"
            style="@style/sub_heading"
         />

        <Button
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:id="@+id/nextBtn"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/right_arrow_black"
            android:textColor="#000000"

         />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height= "wrap_content"
            android:layout_toLeftOf="@+id/nextBtn"
            android:text="52"
            android:id="@+id/total_shift_count"
            style="@style/body2"
            android:layout_marginTop="10dp"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Speciality"
            android:id="@+id/doctorSpeciality"
            style="@style/body2"
            android:layout_below="@+id/doctorName"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Todayâ€™s Appointments : "
            style="@style/body1"
            android:id="@+id/lastAppointmentDate"
            android:layout_below="@+id/doctorSpeciality"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upcoming Visit:  "
            android:textSize="10sp"
            android:visibility="gone"
            android:id="@+id/upcomingText"
            android:layout_below="@+id/lastAppointmentDate"
            android:textColor="#000000"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12-04-2015"
            android:textSize="10sp"
            android:visibility="gone"
            android:layout_toRightOf="@+id/upcomingText"
            android:layout_below="@+id/lastAppointmentDate"
            android:textColor="#1E90FF"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Slot 1 :  "
            style="@style/body1"
            android:id="@+id/slot1"
            android:layout_below="@+id/upcomingText"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12-04-2015"
            android:textSize="10sp"
            android:visibility="gone"
            android:layout_toRightOf="@+id/upcomingText"
            android:layout_below="@+id/lastAppointmentDate"
            android:textColor="#1E90FF"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Slot 2 :  "
            style="@style/body1"
            android:id="@+id/slot2"
            android:layout_below="@+id/slot1"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Slot 3 :  "
            style="@style/body1"
            android:id="@+id/slot3"
            android:layout_below="@+id/slot2"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8:00 AM-11:00 AM"
            style="@style/body1"
            android:id="@+id/slot_time1"
            android:layout_toRightOf="@+id/slot1"
            android:layout_below="@+id/upcomingText"

        />
        <Button
            android:layout_width="15dp"
            android:layout_height="10dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:id="@+id/slot_button1"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/lastAppointmentDate"
            android:layout_alignParentRight="true"
            android:background="@drawable/right_arrow_black"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height= "wrap_content"
            android:layout_toLeftOf="@+id/slot_button1"
            android:text="10"
            android:id="@+id/slot_time_text1"
            style="@style/body1"
            android:layout_below="@+id/lastAppointmentDate"
            />


        <Button
            android:layout_width="15dp"
            android:layout_height="10dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:id="@+id/slot_button2"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/slot_button1"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/right_arrow_black"
            android:textColor="#000000"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height= "wrap_content"
            android:layout_toLeftOf="@+id/slot_button2"
            android:text="10"
            android:id="@+id/slot_time_text2"
            style="@style/body1"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/slot_button1"
            />

        <Button
            android:layout_width="15dp"
            android:layout_height="10dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:id="@+id/slot_button3"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/slot_button2"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/right_arrow_black"
            android:textColor="#000000"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height= "wrap_content"
            android:layout_toLeftOf="@+id/slot_button3"
            android:text="10"
            android:id="@+id/slot_time_text3"
            style="@style/body1"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/slot_button2"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8:00 AM-11:00 AM"
            style="@style/body1"
            android:id="@+id/slot_time2"
            android:layout_toRightOf="@+id/slot2"
            android:layout_below="@+id/slot1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8:00 AM-11:00 AM"
            style="@style/body1"
            android:id="@+id/slot_time3"
            android:layout_toRightOf="@+id/slot3"
            android:layout_below="@+id/slot2"
            />
    </RelativeLayout>
    
</RelativeLayout>
