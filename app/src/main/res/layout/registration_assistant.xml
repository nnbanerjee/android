    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/city_tv"
        android:text="City *"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        android:textSize="13dp"
        android:layout_below="@+id/country_tv"

        android:layout_marginTop="20dp"
        android:textColor="@color/text_view_color"
        />
    <EditText
        android:id="@+id/city"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/country_spinner"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/city_tv"
        android:background="@drawable/black_border"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:singleLine="true"
        android:layout_alignStart="@+id/country_spinner"
        android:paddingLeft="3dp"
        android:layout_marginRight="10dp"
        android:textSize="14dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bloodGroupTV"
        android:layout_below="@+id/city_tv"
        android:text="Blood Group"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        android:textSize="13dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/text_view_color"
        />

    <Spinner
        android:layout_width="fill_parent"
        android:layout_marginRight="10dp"
        android:layout_height="30dp"
        android:id="@+id/bloodGroup"
        android:background="@drawable/black_border"
        android:layout_below="@+id/city"
        android:layout_toRightOf="@+id/bloodGroupTV"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/name"
        android:imeOptions="actionNext"
        android:layout_alignStart="@+id/city"
        android:textSize="12dp"
        android:spinnerMode="dropdown"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profession_tv"
        android:layout_below="@+id/bloodGroupTV"
        android:text="Profession *"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        android:textSize="13dp"
        android:layout_marginTop="25dp"
        android:textColor="@color/text_view_color"/>
    <Spinner
        android:layout_width="fill_parent"
        android:layout_marginRight="10dp"
        android:layout_height="30dp"
        android:id="@+id/profession_spinner"
        android:background="@drawable/black_border"
        android:layout_below="@+id/bloodGroup"
        android:layout_toRightOf="@+id/profession_tv"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/name"
        android:imeOptions="actionNext"
        android:layout_alignStart="@+id/city"
        android:textSize="12dp"
        android:spinnerMode="dropdown"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/speciality_tv"
        android:layout_below="@+id/profession_tv"
        android:text="Specialisation *"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        android:textSize="13dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/text_view_color"/>
    <Spinner
        android:layout_width="fill_parent"
        android:layout_marginRight="10dp"
        android:layout_height="30dp"
        android:id="@+id/speciality_spinner"
        android:background="@drawable/black_border"
        android:layout_below="@+id/profession_spinner"
        android:layout_toRightOf="@+id/speciality_tv"
        android:layout_marginTop="20dp"
        android:layout_alignLeft="@+id/name"
        android:imeOptions="actionNext"
        android:layout_alignStart="@+id/city"
        android:textSize="12dp"
        android:spinnerMode="dropdown"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/agreeTC"
        android:layout_below="@id/speciality_tv"
        android:textSize="13dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:textColor="#000000"
        android:text="Agree to Terms and Conditions"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView"
        android:layout_below="@+id/gender"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_toRightOf="@+id/dobTV"
        android:layout_marginLeft="50dp"
        />
    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imageButton_calendar"
        android:src="@drawable/cal"
        android:layout_alignTop="@+id/textView"
        android:layout_marginTop="-10dp"
        android:layout_marginRight="20dp"
        android:layout_alignRight="@+id/location"
        android:layout_alignEnd="@+id/location"
        />


</RelativeLayout>
    </ScrollView>