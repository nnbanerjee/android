<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
<RelativeLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="fill_parent">
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="25dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/person"
        android:id="@+id/personImage"
        android:layout_marginTop="5dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:textSize="13dp"
        android:id="@+id/upload"
        android:padding="5dp"
        android:textColor="@color/white"
        android:background="@drawable/rounded_orange_color"
        android:layout_toRightOf="@id/personImage"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="5dp"
        android:text="Upload Photo"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name_textViewView"
        android:layout_below="@+id/personImage"
        android:text="Name *"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        android:textSize="13dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/text_view_color"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_marginRight="10dp"
        android:layout_height="20dp"
        android:layout_below="@+id/personImage"
        android:id="@+id/name"
        android:background="@drawable/black_border"
        android:paddingLeft="3dp"
        android:layout_toRightOf="@+id/name_textViewView"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="75dp"
        android:imeOptions="actionNext"
        android:singleLine="true"
        android:textSize="14dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/email_textViewView"
        android:layout_below="@+id/name"
        android:text="Email ID *"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        android:textSize="13dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/text_view_color"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:id="@+id/email"
        android:background="@drawable/black_border"
        android:paddingLeft="3dp"
        android:layout_below="@+id/name"
        android:layout_toRightOf="@+id/name_textViewView"
        android:layout_marginTop="5dp"
        android:layout_alignLeft="@+id/name"
        android:layout_alignStart="@+id/name"
        android:layout_alignRight="@+id/name"
        android:imeOptions="actionNext"
        android:inputType="textEmailAddress"
        android:singleLine="true"
        android:textSize="14dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/password_textViewView"
        android:layout_below="@+id/email"
        android:text="Password *"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        android:textSize="13dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/text_view_color"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:id="@+id/password"
        android:background="@drawable/black_border"
        android:paddingLeft="3dp"
        android:layout_alignTop="@+id/password_textViewView"
        android:layout_alignLeft="@+id/name"
        android:layout_alignStart="@+id/name"
        android:layout_alignRight="@+id/name"
        android:imeOptions="actionNext"
        android:singleLine="true"
        android:inputType="textPassword"
        android:textSize="14dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mobile_textViewView"
        android:layout_below="@+id/password"
        android:text="Mobile *"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        android:textSize="13dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/text_view_color"
        />
    <EditText
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_below="@id/password"
        android:id="@+id/postal_code"
        android:layout_toRightOf="@+id/mobile_textViewView"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="5dp"
        android:text="+91"
        android:textSize="14dp"
        android:singleLine="true"
        android:imeOptions="actionNext"
        android:background="@drawable/black_border"
        android:paddingLeft="3dp"/>

    <EditText
        android:layout_width="160dp"
        android:layout_height="20dp"
        android:id="@+id/mobile"
        android:inputType="number"
        android:background="@drawable/black_border"
        android:paddingLeft="3dp"
        android:layout_below="@+id/password"
        android:layout_alignLeft="@+id/name"
        android:layout_alignStart="@+id/name"
        android:layout_alignRight="@+id/name"

        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@id/postal_code"
        android:layout_marginTop="5dp"
        android:imeOptions="actionNext"
        android:singleLine="true"
        android:textSize="14dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/genderTV"
        android:layout_below="@+id/mobile"
        android:text="Gender *"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        android:textSize="13dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/text_view_color"
        />
    <RadioGroup
        android:id="@+id/gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/genderTV"
        android:layout_toRightOf="@+id/genderTV"
        android:layout_marginLeft="68dp"
        android:orientation="horizontal"
        >


        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"
            android:layout_marginTop="0dp"
            android:id="@+id/gender_male"
            android:checked="true" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"
            android:id="@+id/gender_female"
            />


    </RadioGroup>

   <!-- <Spinner
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:background="#ffffff"
        android:id="@+id/gender"
        android:layout_below="@+id/mobile"
        android:layout_alignTop="@+id/genderTV"
        android:layout_alignBottom="@+id/gender"
        android:layout_alignLeft="@+id/name"
        android:layout_alignRight="@+id/name"
        android:imeOptions="actionNext"
        android:textSize="14dp"
        />
-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dobTV"
        android:layout_below="@+id/gender"
        android:text="Date Of Birth"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        android:textSize="13dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/text_view_color"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/locationTV"
        android:layout_below="@+id/textView"
        android:text="Address *"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        android:textSize="13dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/text_view_color"
        />

    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/location_button"
        android:background="@drawable/loc"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@+id/locationTV"
        android:layout_below="@+id/imageButton_calendar"
    />

    <EditText
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:id="@+id/location"
        android:background="@drawable/black_border"
        android:paddingLeft="3dp"
        android:layout_below="@+id/textView"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/location_button"
        android:layout_marginTop="10dp"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:textSize="14dp"/>
    <TextView
        android:id="@+id/country_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/location_button"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:text="Country *"
        android:textColor="@color/text_view_color"
        android:textSize="13dp"
        android:textStyle="bold" />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/country_spinner"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:textSize="14dp"
        android:background="@drawable/black_border"
        android:layout_alignStart="@+id/name"
        android:layout_toRightOf="@+id/country_tv"
        android:layout_below="@+id/location_button"/>
