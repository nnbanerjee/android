<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:layout_margin="5dp"
    android:layout_marginBottom="10dp"
    tools:context=".HomeActivity">


    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/procedureName"
        android:text="Procedure Name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        style="@style/body2"
    />
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/delete_template"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_close_black_24dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
    />
    <!--<com.mindnerves.meidcaldiary.HorizontalListView
        android:id="@+id/horizontalTemplateList"
        android:layout_below="@+id/procedureName"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:background="@drawable/rounded_black_color"
        android:layout_height="100dp" />-->
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/ic_chevron_right_black_24dp"
        android:layout_below="@+id/delete_template"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:id="@+id/right_navigation"
    />
    <ListView
        android:layout_width="match_parent"
        android:id="@+id/allTemplateList"
        android:layout_below="@+id/delete_template"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:layout_toLeftOf="@+id/right_navigation"
        android:background="@drawable/rounded_black_color"
        android:layout_height="80dp">
    </ListView>

</RelativeLayout>
