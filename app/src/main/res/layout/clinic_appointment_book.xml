<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/doctorName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_toRightOf="@+id/clockIcon"
                android:gravity="center"
                android:text="Doctor Name "
                android:textColor="#1E90FF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="gone" />


            <RelativeLayout
                android:id="@+id/shift1Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/doctorName"
                android:layout_marginBottom="5dp">

                <TextView
                    android:id="@+id/slot1_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Slot 1"
                    android:textColor="#1E90FF"
                    style="@style/body2" />

                <Button
                    android:id="@+id/book_online_right_arrow1"
                    android:layout_width="25dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/right_arrow" />

                <TextView
                    android:id="@+id/book_online_slot1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toLeftOf="@+id/book_online_right_arrow1"
                    android:text="Book Online"
                    android:textColor="#1E90FF"
                    style="@style/body2"/>

                <TextView
                    android:id="@+id/shift1Days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/slot1_text"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="Mon - Sun"
                    style="@style/body2" />

                <TextView
                    android:id="@+id/shift1Time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/shift1Days"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="9:00 AM – 2:45 PM"
                    style="@style/body2" />

                <ListView
                    android:id="@+id/list_slot1"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:padding="5dp"
                    android:visibility="gone"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/shift1Time">

                </ListView>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/shift2Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/shift1Layout"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/slot2_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Slot 2"
                    android:textColor="#1E90FF"
                    style="@style/body2" />

                <Button
                    android:id="@+id/book_online_right_arrow2"
                    android:layout_width="25dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/right_arrow" />

                <TextView
                    android:id="@+id/book_online_slot2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toLeftOf="@+id/book_online_right_arrow2"
                    android:text="Book Online"
                    android:textColor="#1E90FF"
                    style="@style/body2" />


                <TextView
                    android:id="@+id/shift2Days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/slot2_text"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="Mon - Sun"
                    style="@style/body2" />

                <TextView
                    android:id="@+id/shift2Time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/shift2Days"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="9:00 AM – 2:45 PM"
                    style="@style/body2"/>
                <ListView
                    android:id="@+id/list_slot2"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:padding="5dp"
                    android:visibility="gone"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/shift2Time"/>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/shift3Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/shift2Layout"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/slot3_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Slot 3"
                    android:textColor="#1E90FF"
                    style="@style/body2" />

                <Button
                    android:id="@+id/book_online_right_arrow3"
                    android:layout_width="25dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/right_arrow" />

                <TextView
                    android:id="@+id/book_online_slot3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toLeftOf="@+id/book_online_right_arrow3"
                    android:text="Book Online"
                    android:textColor="#1E90FF"
                    style="@style/body2" />

                <TextView
                    android:id="@+id/shift3Days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/slot3_text"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/shift3DayText"
                    android:text="Mon - Sun"
                    style="@style/body2"/>

                <TextView
                    android:id="@+id/shift3Time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/shift3Days"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="9:00 AM – 2:45 PM"
                    style="@style/body2" />
                <ListView
                    android:id="@+id/list_slot3"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:padding="5dp"
                    android:visibility="gone"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/shift3Time"/>

            </RelativeLayout>


        </RelativeLayout>
    </RelativeLayout>
</ScrollView>
