<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">
    <RelativeLayout
        android:layout_marginLeft="50dp"
        android:padding="5dp"
        android:background="@drawable/rectangle_green_color"
        android:layout_marginTop="10dp"
        android:id="@+id/layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/body10"
            android:id="@+id/text_message"
            android:text="message"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/body12"
            android:id="@+id/time"
            android:text="12:43"
            android:layout_below="@+id/text_message"
            android:layout_toLeftOf="@+id/message_tick"
            />
        <ImageView
            android:layout_below="@+id/text_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/message_tick"
            android:layout_marginLeft="3dp"
            android:background="@drawable/chat_message_tick"
            android:layout_marginTop="3dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginRight="50dp"
        android:padding="5dp"
        android:visibility="gone"
        android:layout_below="@+id/layout"
        android:background="@drawable/rectangle_white_color"
        android:layout_marginTop="10dp"
        android:id="@+id/layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/body10"
            android:id="@+id/text_message1"
            android:text="message"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/body12"
            android:id="@+id/time1"
            android:text="12:43"
            android:layout_below="@+id/text_message1"
            android:layout_toLeftOf="@+id/message_tick1"
            />
        <ImageView
            android:layout_below="@+id/text_message1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/message_tick1"
            android:layout_marginLeft="3dp"
            android:background="@drawable/chat_message_tick"
            android:layout_marginTop="3dp"/>
    </RelativeLayout>
</RelativeLayout>
