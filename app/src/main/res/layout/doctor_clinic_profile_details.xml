<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layout"
    android:background="#ffffff">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/doctorImg"
        android:layout_margin="5dp"
        android:background="@drawable/clinic_image"
        />
    <ImageView
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/doctorImg"
        android:id="@+id/downImg"
        android:scaleType="fitXY"
        android:background="@drawable/up_arrow"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/doctorImg"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Doctor Name"
            style="@style/sub_heading"
            android:id="@+id/doctor_name"
         />
        <Button
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:id="@+id/total_right_arrow"
            android:background="@drawable/right_arrow"
            android:layout_marginRight="10dp"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/total_right_arrow"
            android:text="52"
            android:id="@+id/total_shift_count"
            style="@style/body2"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:background="#ffffff"
            android:text="View All"
            android:gravity="right"
            android:visibility="gone"
            android:id="@+id/viewAll"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@+id/doctor_name"
            android:layout_alignParentRight="true"
            android:layout_marginTop="40dp"
            android:textColor="#1E90FF"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="General Clinic"
            android:id="@+id/general_clinic_text"
            style="@style/body2"
            android:layout_below="@+id/doctor_name"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Todayâ€™s Appointments :"
            style="@style/body1"
            android:id="@+id/today_appointment"
            android:layout_below="@+id/general_clinic_text"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Slot 1 :  "
            style="@style/body1"
            android:id="@+id/slot1"
            android:layout_below="@+id/today_appointment"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Slot 2 :  "
            style="@style/body1"
            android:id="@+id/slot2"
            android:layout_below="@+id/slot1"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Slot 3 :  "
            style="@style/body1"
            android:id="@+id/slot3"
            android:layout_below="@+id/slot2"
            android:textColor="#000000"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8:00 AM-11:00 AM"
            style="@style/body1"
            android:id="@+id/slot_time1"
            android:layout_toRightOf="@+id/slot1"
            android:layout_below="@+id/today_appointment"

            />

        <Button
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:id="@+id/slot_button1"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/today_appointment"
            android:layout_alignParentRight="true"
            android:background="@drawable/right_arrow"
            android:textColor="#000000"
            android:layout_marginTop="2dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height= "wrap_content"
            android:layout_toLeftOf="@+id/slot_button1"
            android:text="10"
            style="@style/body1"
            android:id="@+id/slot_time_text1"
            android:layout_below="@+id/today_appointment"
            />

        <Button
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:id="@+id/slot_button2"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/slot_button1"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/right_arrow"
            android:textColor="#000000"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height= "wrap_content"
            android:layout_toLeftOf="@+id/slot_button2"
            android:text="10"
            style="@style/body1"
            android:id="@+id/slot_time_text2"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/slot_button1"
            />

        <Button
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:id="@+id/slot_button3"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/slot_button2"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/right_arrow"
            android:textColor="#000000"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height= "wrap_content"
            android:layout_toLeftOf="@+id/slot_button3"
            android:text="10"
            android:id="@+id/slot_time_text3"
            style="@style/body1"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/slot_button2"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8:00 AM-11:00 AM"
            style="@style/body1"
            android:id="@+id/slot_time2"
            android:layout_toRightOf="@+id/slot2"
            android:layout_below="@+id/slot1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8:00 AM-11:00 AM"
            style="@style/body1"
            android:id="@+id/slot_time3"
            android:layout_toRightOf="@+id/slot3"
            android:layout_below="@+id/slot2"

            />

    </RelativeLayout>

</RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout2"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/layout"
        android:background="#ffffff">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/layout3"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/layout"
            android:background="#ffffff">


            <Button
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:id="@+id/appointmentBtn"
                android:text="APPOINTMENTS"
                style="@style/body"
                android:layout_toRightOf="@+id/profileBtn"
                android:textColor="#ffffff"
                android:background="@drawable/square_blue_color"
            />
            <Button
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:text="PROFILE"
                style="@style/body"
                android:background="@drawable/square_grey_color"
                android:id="@+id/profileBtn"
                />

            </RelativeLayout>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/content_details"
        android:layout_width="match_parent"
        android:layout_below="@+id/layout2"
        android:layout_height="fill_parent"/>
</RelativeLayout>