<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    android:layout_height="wrap_content">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/day"
        android:gravity="center"
        android:fontFamily="sans-serif"
        style="@style/textViewThemeForTimeReninder"

        android:text="12-May"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/time1"
        android:gravity="center"
        android:fontFamily="sans-serif"
        android:layout_below="@+id/day"
        style="@style/textViewThemeForTimeReninder"
        android:text="09:00AM"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/time2"
        android:gravity="center"
        android:fontFamily="sans-serif"
        android:layout_below="@+id/time1"
        style="@style/textViewThemeForTimeReninder"
        android:text=""/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/time3"
        android:fontFamily="sans-serif"
        android:gravity="center"
        style="@style/textViewThemeForTimeReninder"
        android:layout_below="@+id/time2"
        android:text=""/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/time4"
        android:gravity="center"
        style="@style/textViewThemeForTimeReninder"
        android:layout_below="@+id/time3"
        android:text=""/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/time5"
        android:fontFamily="sans-serif"
        android:gravity="center"
        style="@style/textViewThemeForTimeReninder"
        android:layout_below="@+id/time4"
        android:text=""/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/time6"
        android:fontFamily="sans-serif"
        style="@style/textViewThemeForTimeReninder"
        android:gravity="center"
        android:layout_below="@+id/time5"
        android:text=""/>
</RelativeLayout>
