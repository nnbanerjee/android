<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/profile_pic"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/doctor"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp" />
        <Button
            android:id="@+id/upload"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@+id/profile_pic"
            android:background="@drawable/rounded_orange_color"
            android:text="Upload"
            android:textColor="@color/white"
            android:textSize="13dp" />
        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:background="#ff4a4a"
            android:layout_alignParentRight="true"
            style="@style/body2"
            android:textColor="#ffffff"
            android:id="@+id/doctor_id"
            android:paddingLeft="8dp"
            android:paddingTop="5dp"

        />
        <RelativeLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/upload"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/name_textViewView"
                style="@style/body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="Name *" />

            <EditText
                android:id="@+id/name"
                style="@style/body1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/personImage"
                android:layout_marginLeft="75dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/name_textViewView"
                android:background="@drawable/black_border"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:paddingLeft="3dp"
                android:singleLine="true" />

            <TextView
                android:id="@+id/email_textViewView"
                style="@style/body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/name"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="Email Id *" />

            <TextView
                android:id="@+id/email"
                style="@style/body1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignLeft="@+id/name"
                android:layout_alignRight="@+id/name"
                android:layout_alignStart="@+id/name"
                android:layout_below="@+id/name"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/name_textViewView"
                android:background="@drawable/black_border"
                android:paddingLeft="3dp"
                android:paddingTop="5dp"
                android:singleLine="true"
                android:text="demo@gmail.com"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/password_textViewView"
                style="@style/body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/email"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="Password *" />

            <EditText
                android:id="@+id/password"
                style="@style/body1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignLeft="@+id/name"
                android:layout_alignRight="@+id/name"
                android:layout_alignStart="@+id/name"
                android:layout_below="@+id/email"
                android:layout_marginTop="10dp"
                android:background="@drawable/black_border"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:paddingLeft="3dp"
                android:singleLine="true" />

            <TextView
                android:id="@+id/mobile_textViewView"
                style="@style/body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/password"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="Mobile *" />

            <TextView
                android:id="@+id/mobile"
                style="@style/body1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignRight="@+id/name"
                android:layout_alignStart="@+id/name"
                android:layout_below="@+id/password"
                android:layout_marginTop="10dp"
                android:background="@drawable/black_border"
                android:paddingLeft="3dp"
                android:paddingTop="5dp"
                android:text="1234567890"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/genderTV"
                style="@style/body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/mobile"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="Gender *" />

            <RadioGroup
                android:id="@+id/gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mobile"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/genderTV"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/gender_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:checked="true"
                    android:fontFamily="sans-serif"
                    android:text="Male"
                    android:textSize="@dimen/body1" />

                <RadioButton
                    android:id="@+id/gender_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="Female"
                    android:textSize="@dimen/body1" />
            </RadioGroup>

            <TextView
                android:id="@+id/dobTV"
                style="@style/body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/gender"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="Date Of Birth" />

            <ImageButton
                android:id="@+id/imageButton_calendar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignEnd="@+id/location"
                android:layout_alignParentRight="true"
                android:layout_alignRight="@+id/location"
                android:layout_alignTop="@+id/textView"
                android:layout_below="@+id/gender"
                android:layout_marginTop="-10dp"
                android:src="@drawable/cal" />

            <TextView
                android:id="@+id/textView"
                style="@style/body1"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@+id/gender"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@+id/imageButton_calendar"
                android:layout_toRightOf="@+id/dobTV"
                android:paddingLeft="3dp"
                android:paddingTop="5dp"
                android:text="New Text" />

            <TextView
                android:id="@+id/locationTV"
                style="@style/body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/textView"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:text="Address *" />

            <Button
                android:id="@+id/location_button"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_below="@+id/imageButton_calendar"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/locationTV"
                android:background="@drawable/location" />

            <EditText
                android:id="@+id/location"
                style="@style/body1"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_below="@+id/textView"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/location_button"
                android:background="@drawable/black_border"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:paddingLeft="3dp"
                android:singleLine="true" />

            <TextView
                android:id="@+id/country_tv"
                style="@style/body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/location_button"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="Country *" />

            <Spinner
                android:id="@+id/country_spinner"
                style="@style/body1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignStart="@+id/location_button"
                android:layout_below="@+id/location_button"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/country_tv"
                android:background="@drawable/black_border" />

            <TextView
                android:id="@+id/region_tv"
                style="@style/body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/country_tv"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:text="Region *" />

            <Spinner
                android:id="@+id/region_spinner"
                style="@style/body1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignStart="@+id/location_button"
                android:layout_below="@+id/country_spinner"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/region_tv"
                android:background="@drawable/black_border" />

            <TextView
                android:id="@+id/city_tv"
                style="@style/body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/region_tv"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:text="City *" />

            <EditText
                android:id="@+id/city"
                style="@style/body1"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_alignStart="@+id/region_spinner"
                android:layout_below="@+id/region_spinner"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/city_tv"
                android:background="@drawable/black_border"
                android:imeOptions="actionNext"
                android:paddingLeft="3dp"
                android:singleLine="true" />

            <TextView
                android:id="@+id/bloodGroupTV"
                style="@style/body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/city_tv"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:text="Blood Group" />

            <Spinner
                android:id="@+id/bloodGroup"
                style="@style/body1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignStart="@+id/location_button"
                android:layout_below="@+id/city"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/bloodGroupTV"
                android:background="@drawable/black_border"
                android:imeOptions="actionNext"
                android:spinnerMode="dropdown" />

            <TextView
                android:id="@+id/specialitytv"
                style="@style/body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/bloodGroup"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:text="Speciality" />

            <Spinner
                android:id="@+id/specialization"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_alignLeft="@+id/bloodGroup"
                android:layout_below="@+id/bloodGroup"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/specialitytv"
                android:background="@drawable/black_border"
                android:imeOptions="actionNext"
                android:spinnerMode="dropdown"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/practice_name_tv"
                style="@style/body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/specialitytv"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:text="Practice Name *" />

            <Spinner
                android:id="@+id/practice_name"
                style="@style/body1"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_alignLeft="@+id/bloodGroup"
                android:layout_below="@+id/specialization"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/practice_name_tv"
                android:background="@drawable/black_border"
                android:imeOptions="actionNext"
                android:spinnerMode="dropdown" />

            <TextView
                android:id="@+id/registration_tv"
                style="@style/body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/practice_name_tv"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:text="Registration No.*" />

            <EditText
                android:id="@+id/registration_number"
                style="@style/body1"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_alignStart="@+id/practice_name"
                android:layout_below="@id/practice_name"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/registration_tv"
                android:background="@drawable/black_border"
                android:imeOptions="actionDone"
                android:maxLength="10"
                android:paddingLeft="3dp"
                android:singleLine="true" />

            <TextView
                android:id="@+id/document_tv"
                style="@style/body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/registration_tv"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="35dp"
                android:text="Document " />

            <TextView
                android:id="@+id/document_name"
                style="@style/body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/registration_number"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:layout_toLeftOf="@+id/upload_document"
                android:layout_toRightOf="@+id/document_tv"
                android:text="No File"
                android:textSize="14dp" />

            <Button
                android:id="@+id/upload_document"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/registration_number"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/rounded_orange_color"
                android:padding="5dp"
                android:text="Upload"
                android:textColor="@color/white"
                android:textSize="13dp" />

            <Button
                android:id="@+id/save_profile_data"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_below="@+id/document_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="@drawable/rounded_blue_color"
                android:text="Save"
                android:textColor="#ffffff"
                android:textSize="13dp"
                android:textStyle="bold" />
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>