<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/email_textViewView"
        android:text="Email ID"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="25dp"
        android:textStyle="bold"
        android:textSize="13dp"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:id="@+id/email"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/email_textViewView"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="75dp"
        android:imeOptions="actionNext"
        android:singleLine="true"
        android:textSize="14dp"
        android:paddingLeft="3dp"
        android:text="cc@gmail.com"
        android:background="@drawable/black_border"
        android:inputType="textEmailAddress"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/password_textViewView"
        android:layout_below="@+id/email"
        android:text="Password"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="25dp"
        android:textStyle="bold"
        android:textSize="13dp"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:id="@+id/password"
        android:layout_alignTop="@+id/password_textViewView"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/email"
        android:layout_alignRight="@+id/email"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:text="cc"
        android:paddingLeft="3dp"
        android:background="@drawable/black_border"
        android:inputType="textPassword"
        android:textSize="14dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/login"
        android:text="Login"
        android:textSize="12dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/rounded_orange_color"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/password"

     />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login"
        android:layout_marginTop="10dp"
        android:text="Forgot password? Click here"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="2dp"
        android:textSize="10dp"
        android:textStyle="bold"
        android:id="@+id/forgot_password"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forgot_password"
        android:layout_marginTop="10dp"
        android:text="Not Register? Please Register Now."
        android:layout_marginLeft="5dp"
        android:layout_marginRight="2dp"
        android:textSize="10dp"
        android:textStyle="bold"
        android:id="@+id/not_register"
    />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/not_register"
        android:id="@+id/register"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:textSize="14dp"
        android:textStyle="bold"
        android:visibility="gone"
        android:text="Register As:"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/signin"
        android:text="Patient"
        android:textSize="12dp"
        android:textStyle="bold"
        android:background="@drawable/rounded_blue_color"
        android:textAlignment="center"
        android:layout_below="@+id/register"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"

        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/signindoc"
        android:text="Doctor"
        android:textSize="12dp"
        android:textStyle="bold"
        android:background="@drawable/rounded_blue_color"
        android:layout_toRightOf="@+id/signin"
        android:layout_marginRight="10dp"

        android:layout_below="@+id/register"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"

        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/signinassistance"
        android:text="Assistance"
        android:layout_marginTop="10dp"
        android:textSize="12dp"
        android:textStyle="bold"
        android:background="@drawable/rounded_blue_color"
        android:layout_below="@+id/register"
        android:layout_toRightOf="@+id/signindoc"

     />
</RelativeLayout>