<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout_doctor_basic_info">
        <TextView
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ABC"
            android:textColor="#000000"
            android:textStyle="bold"
            android:id="@+id/patient_first_name"
            />

        <TextView
            android:layout_width="wrap_content"
            android:paddingTop="10dp"
            android:id="@+id/patient_location"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/patient_first_name"
            android:paddingLeft="10dp"
            android:textColor="#000000"
            android:text="Pune"/>


        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:id="@+id/checkbox_patient"
            android:layout_alignParentRight="true"
            android:paddingRight="10dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_doctor_speciality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_doctor_basic_info">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="#000000"
            android:id="@+id/email_show"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/email_show"
            android:id="@+id/mobile_show"
            android:textColor="#000000"
            android:paddingLeft="5dp"
            android:text="9420787814"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mobile_show">
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/access_level1"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:orientation="horizontal">


            <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/read_only_id"
                    android:text="Read Only"
                    android:checked="true"
                    android:textColor="#000000"
                    android:layout_marginRight="5dp"
                    android:textSize="11dp"

                />
            <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/full_access_id"
                    android:layout_toLeftOf="@+id/read_only_id"
                    android:text="Full Access"
                    android:textColor="#000000"
                    android:textSize="11dp"
                    />

        </RadioGroup>

        </RelativeLayout>

    </RelativeLayout>



    <View

        android:layout_alignBottom="@+id/layout_doctor_speciality"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="@drawable/startbar"/>

</RelativeLayout>
