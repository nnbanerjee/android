<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2015-9-8"
            android:id="@+id/date_text"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/heading"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:paddingTop="10dp"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/heading"
            android:layout_below="@+id/date_text"
            android:text="SLOT:"
            android:textColor="#ffffff"
            android:id="@+id/slot_text"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:textStyle="bold"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/slot_text"
            android:textSize="@dimen/heading"
            android:text="6:00 AM - 8:00 AM"
            android:textColor="#ffffff"
            android:id="@+id/slot_appointment"
            android:layout_below="@+id/date_text"
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/heading"
            android:layout_below="@+id/slot_text"
            android:text="TIME:"
            android:textColor="#ffffff"
            android:id="@+id/time_text"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/time_text"
            android:textSize="@dimen/heading"
            android:text="6:00 AM"
            android:id="@+id/appointment_time"
            android:textColor="#ffffff"
            android:layout_below="@+id/slot_text"
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/heading"
            android:textStyle="bold"
            android:text="VISIT TYPE:"
            android:textColor="#ffffff"
            android:id="@+id/visit_type_text"
            android:paddingLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/appointment_time"
        />
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Follow up"
            android:textSize="18sp"
            android:spinnerMode="dialog"
            android:background="#ffffff"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:prompt="@string/select_visit_type"
            android:entries="@array/visit_type_list"
            android:layout_toRightOf="@+id/visit_type_text"
            android:layout_below="@+id/appointment_time"
            android:id="@+id/visitType"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/visit_type_text"
            android:textSize="@dimen/heading"
            android:text="PATIENT:"
            android:textColor="#ffffff"
            android:id="@+id/patient_text"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:layout_marginTop="35dp"
        />
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/patient_text"
            android:layout_below="@+id/visit_type_text"
            android:layout_marginTop="20dp"
            android:background="#ffffff"
            android:layout_marginLeft="5dp"
            android:id="@+id/patient_spinner"
            android:paddingLeft="5dp"
        />
        <Button
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:id="@+id/appointment_save"
            android:text="Save"
            android:textColor="@color/white"
            android:textSize="14dp"

            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:background="@drawable/rounded_orange_color"
            android:layout_marginLeft="20dp"/>
        <Button
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:id="@+id/appointment_cancel"
            android:text="Cancel"
            android:textStyle="bold"
            android:textSize="14dp"
            android:textColor="@color/white"
            android:background="@drawable/rounded_orange_color"
            android:layout_marginTop= "20dp"
            android:layout_toRightOf="@id/appointment_save"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="80dp"/>
    </RelativeLayout>

</RelativeLayout>