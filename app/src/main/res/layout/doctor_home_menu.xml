<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@color/white"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/patient_profile"
            android:background="@color/white"
            android:layout_marginTop="20dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/doctor_image"
                android:background="@drawable/doctor"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:id="@+id/patient_profile_container"
                android:layout_toRightOf="@+id/doctor_image">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/patients_profiles"
                    android:textAppearance="@style/heading2"
                    android:id="@+id/doctorBtn"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/arrow_right"
                    android:id="@+id/right_arrow_patient_profile"
                />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/total_patients"
                    android:inputType="number"
                    android:textAppearance="@style/heading4"
                    android:layout_toLeftOf="@+id/right_arrow_patient_profile"
                    android:text="0"
                />

            </RelativeLayout>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
        android:layout_below="@+id/patient_profile"
            android:background="@color/color_blue_default"
            android:visibility="visible"
            android:id="@+id/view1"
            ></View>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/patient_profile"
            android:id="@+id/manage_appointment"

            android:layout_marginTop="20dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/manage_appointment_image"
                android:background="@drawable/manage_appointment"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/manage_appointment_image">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/manage_appointments"
                    android:textAppearance="@style/heading2"
                    android:id="@+id/manage_appointment_text"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/arrow_right"
                    android:id="@+id/right_arrow_manage_appointments"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/total_appointments"
                    android:inputType="number"
                    android:layout_toLeftOf="@+id/right_arrow_manage_appointments"
                    android:textAppearance="@style/heading4"
                    android:text="0"
                    />
            </RelativeLayout>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/manage_appointment"
            android:background="@color/color_blue_default"
            android:visibility="visible"
            android:id="@+id/view33"
            ></View>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/manage_appointment"
            android:id="@+id/manage_finance"
            android:layout_marginTop="20dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/firstAidKitsImg"
                android:background="@drawable/manage_finance"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/firstAidKitsImg">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/manage_finance"
                    android:textAppearance="@style/heading2"
                    android:id="@+id/manage_finance_text"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/arrow_right"
                    android:id="@+id/right_arrow_manage_finance"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/total_finance"
                    android:layout_toLeftOf="@+id/right_arrow_manage_finance"
                    android:textAppearance="@style/heading4"
                    android:text="0"
                    />


            </RelativeLayout>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/manage_finance"
            android:background="@color/color_blue_default"
            android:visibility="visible"
            android:id="@+id/view44"
            ></View>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/manage_finance"
            android:id="@+id/feedback_layout"

            android:layout_marginTop="20dp">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/feedback_icon"
                android:background="@drawable/feedback"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:id="@+id/manage_feedback"
                android:layout_toRightOf="@+id/feedback_icon">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/feedback"
                    android:textAppearance="@style/heading2"
                    android:id="@+id/feedback_text"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/arrow_right"
                    android:id="@+id/right_arrow_feedback"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/total_feedback"
                    android:layout_toLeftOf="@+id/right_arrow_feedback"
                    android:textAppearance="@style/heading4"
                    android:text="0"
                    />

            </RelativeLayout>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/feedback_layout"
            android:background="@color/color_blue_default"
            android:visibility="visible"
            android:id="@+id/view55"
            ></View>
    </RelativeLayout>
</ScrollView>