<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_margin="5dp"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/que_status"
            android:gravity="center"
            android:textAppearance="@style/heading3_blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NOT STARTED"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/rounded_white_color"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/total_text"
            android:layout_weight="1"
            android:paddingLeft="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total:"/>
        <TextView
            android:id="@+id/total_value"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="32"/>
        <TextView
            android:id="@+id/booked_text"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Booked:"/>
        <TextView
            android:id="@+id/booked_value"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"/>
        <TextView
            android:id="@+id/current_text"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Consulted:"/>
        <TextView
            android:id="@+id/current_value"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22"/>
        <TextView
            android:id="@+id/remaining_text"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remaning:"/>
        <TextView
            android:id="@+id/remaining_value"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/number_of_appointments_text"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:ems="15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number Of Appointments :"/>
        <TextView
            android:id="@+id/number_of_appointments_value"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:layout_toRightOf="@+id/number_of_appointments_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="32"/>
        <TextView
            android:id="@+id/number_of_appointments_booked_text"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:ems="15"
            android:layout_below="@+id/number_of_appointments_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number Of Appointments Booked :"/>
        <TextView
            android:id="@+id/number_of_appointments_booked_value"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:layout_toRightOf="@+id/number_of_appointments_booked_text"
            android:layout_below="@+id/number_of_appointments_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"/>
        <TextView
            android:id="@+id/number_of_appointments_cancelled_text"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:ems="15"
            android:layout_below="@+id/number_of_appointments_booked_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number Of Appointments Cancelled :"/>
        <TextView
            android:id="@+id/number_of_appointments_cancelled_value"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:layout_toRightOf="@+id/number_of_appointments_cancelled_text"
            android:layout_below="@+id/number_of_appointments_booked_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"/>
        <TextView
            android:id="@+id/current_appointment_number_text"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/number_of_appointments_cancelled_text"
            android:ems="15"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Appointment Number :"/>
        <TextView
            android:id="@+id/current_appointment_number_value"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/number_of_appointments_cancelled_text"
            android:layout_toRightOf="@+id/current_appointment_number_text"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22"/>
        <TextView
            android:id="@+id/number_of_people_reported_text"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/current_appointment_number_text"
            android:ems="15"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="People Reported:"/>
        <TextView
            android:id="@+id/number_of_people_reported_value"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/current_appointment_number_text"
            android:layout_toRightOf="@+id/number_of_people_reported_text"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13"/>
        <TextView
            android:id="@+id/number_of_people_confirmed_text"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/number_of_people_reported_text"
            android:ems="15"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="People Confirmed:"/>
        <TextView
            android:id="@+id/number_of_people_confirmed_value"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/number_of_people_reported_text"
            android:layout_toRightOf="@+id/number_of_people_confirmed_text"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13"/>
        <TextView
            android:id="@+id/number_of_people_hold_text"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/number_of_people_confirmed_text"
            android:ems="15"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="People On-Hold:"/>
        <TextView
            android:id="@+id/number_of_people_hold_value"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/number_of_people_confirmed_text"
            android:layout_toRightOf="@+id/number_of_people_confirmed_text"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13"/>
        <TextView
            android:id="@+id/number_of_people_consulted_text"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/number_of_people_hold_text"
            android:ems="15"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="People Consulted:"/>
        <TextView
            android:id="@+id/number_of_people_consulted_value"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/number_of_people_hold_text"
            android:layout_toRightOf="@+id/number_of_people_consulted_text"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13"/>
        <TextView
            android:id="@+id/number_of_people_notvisited_text"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/number_of_people_consulted_text"
            android:ems="15"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="People Not Visited:"/>
        <TextView
            android:id="@+id/number_of_people_notvisited_value"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/number_of_people_consulted_text"
            android:layout_toRightOf="@+id/number_of_people_notvisited_text"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13"/>

    </RelativeLayout>
</LinearLayout>