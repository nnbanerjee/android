<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#69933E"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp">




        <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="wrap_content"
        android:background="@drawable/rounded_white_color"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_height="40dp"
        android:layout_marginRight="20dp">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:id="@+id/searchET"
        android:layout_marginTop="5dp"
        android:background="#ffffff"
        android:layout_toLeftOf="@+id/button_search"
        android:layout_marginLeft="10dp"
        android:imeOptions="actionDone"

    />
    <Button
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:background="@drawable/search"
            android:id="@+id/button_search"
            android:layout_margin="5dp"
            android:layout_alignParentRight="true"
    />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout2"
        android:layout_below="@+id/layout1"
        android:layout_width="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_height="50dp"
        android:layout_marginRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search by:"
            android:id="@+id/search_by"
            android:textColor="#ffffff"
            android:textStyle="bold"/>

        <RadioGroup
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_below="@+id/search_by"
            android:id="@+id/group"
            android:orientation="horizontal"
        >
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/search_name"
                android:text="Name"
                android:textSize="13dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:checked="false" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/search_phone"
                android:text="Mobile No."
                android:textSize="13dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
            />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/search_email"
                android:text="Email ID"
                android:textSize="13dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
            />

        </RadioGroup>

    </RelativeLayout>

    <ListView
        android:id="@+id/list_add_patient"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:paddingLeft="10dp"
        android:layout_below="@+id/layout2"
        android:paddingRight="10dp"
        android:listSelector="#00FFE6"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="80dp"
        android:layout_marginTop="5dp"

    />




    <Button
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="Add New"
        android:textSize="13dp"

        android:background="@drawable/rounded_blue_color"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/add_new"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/back"
        android:text="Back"
        android:textSize="13dp"

        android:background="@drawable/rounded_blue_color"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        />

</RelativeLayout>
