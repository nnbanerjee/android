<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/layout1"
        android:background="#1E90FF">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Appointment #"
            android:textColor="#ffffff"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            style="@style/body2"
            android:id="@+id/appointment_text"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="1"
            style="@style/body2"
            android:id="@+id/count"
            android:layout_toRightOf="@+id/appointment_text"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Time:"
            style="@style/body2"
            android:textColor="#ffffff"
            android:layout_centerHorizontal="true"
            android:id="@+id/time_text"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/time"
            android:layout_centerHorizontal="true"
            android:text="9:00"
            style="@style/body2"
            android:layout_toRightOf="@id/time_text"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textColor="#ffffff"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:id="@+id/patientInfo"
        android:layout_below="@+id/layout1"
        android:background="#ffffff">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/patientImg"
            android:background="@drawable/patient"
        />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_below="@+id/patientImg"
            android:id="@+id/down_image"
            android:background="@drawable/down_arrow"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mr. Sanjay Agarwal"
            android:layout_marginLeft="5dp"
            style="@style/body2"
            android:layout_toRightOf="@+id/patientImg"
            android:id="@+id/patientName"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last visited :"
            android:layout_marginLeft="5dp"
            android:textColor="#000000"
            android:textSize="14sp"
            android:visibility="gone"
            android:layout_below="@+id/patientName"
            android:layout_toRightOf="@+id/patientImg"
            android:id="@+id/lastVisitedText"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12-Jan-2015 9:00 AM"
            android:layout_marginLeft="5dp"
            android:textColor="#000000"
            android:textSize="14sp"
            android:visibility="gone"
            android:layout_below="@+id/patientName"
            android:layout_toRightOf="@+id/lastVisitedText"
            android:id="@+id/lastVisitedValue"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Appointment Type:"
            android:layout_marginLeft="5dp"
            style="@style/body1"
            android:layout_below="@+id/lastVisitedText"
            android:layout_toRightOf="@+id/patientImg"
            android:id="@+id/appointmentTypeText"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Visitor"
            android:layout_marginLeft="5dp"
            style="@style/body1"
            android:layout_below="@+id/lastVisitedValue"
            android:layout_toRightOf="@+id/appointmentTypeText"
            android:id="@+id/appointmentTypeValue"/>

    </RelativeLayout>


</RelativeLayout>