<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monday"
            android:id="@+id/monday"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/monday"
            android:text="Tuesday"
            android:id="@+id/tuesday"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tuesday"
            android:text="Wednesday"
            android:id="@+id/wednesday"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/monday"

            android:text="Thursday"
            android:id="@+id/thursday"/>

        <CheckBox
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Friday"
              android:layout_below="@+id/monday"
              android:layout_toRightOf="@+id/thursday"
              android:id="@+id/friday"
        />

          <CheckBox
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_toRightOf="@+id/friday"
              android:text="Saturday"
              android:layout_below="@+id/monday"
              android:layout_marginLeft="12dp"
              android:id="@+id/saturday"/>

          <CheckBox
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Sunday"
              android:layout_below="@+id/thursday"

              android:id="@+id/sunday"/>

          <Button
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_marginBottom="10dp"
                android:layout_alignParentRight="true"
                android:text="Select All"
                android:textColor="@color/white"
                android:background="@drawable/rounded_orange_color"
                android:layout_below="@+id/sunday"
                android:id="@+id/select_all"
           />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_below="@+id/select_all"
            android:text="From :"
            android:id="@+id/from"

        />

        <Spinner
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:id="@+id/hourfrom"
            android:background="#ffffff"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/select_all"
            android:layout_toRightOf="@+id/from"
            android:imeOptions="actionNext"
            android:textSize="6dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"

            android:text=":"
            android:id="@+id/separation1"
            android:layout_below="@+id/select_all"
            android:layout_toRightOf="@+id/hourfrom"/>

        <Spinner
            android:layout_width="50dp"
            android:layout_height="20dp"

            android:id="@+id/minutefrom"
            android:layout_marginLeft="5dp"
            android:background="#ffffff"
            android:layout_below="@+id/select_all"
            android:layout_toRightOf="@+id/separation1"
            android:imeOptions="actionNext"
            android:textSize="6dp"/>

    <Spinner
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/select_all"
            android:id="@+id/ampmfrom"
            android:layout_toRightOf="@id/minutefrom"
            android:imeOptions="actionNext"
            android:textSize="6dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/from"
            android:layout_marginLeft="15dp"

            android:text="To :"
            android:id="@+id/to"
            />

        <Spinner
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:id="@+id/hourto"
            android:background="#ffffff"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/from"
            android:layout_toRightOf="@+id/to"
            android:imeOptions="actionNext"
            android:textSize="6dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"

            android:id="@+id/separation2"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/from"
            android:layout_toRightOf="@+id/hourto"/>

        <Spinner
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:id="@+id/minuteto"
            android:background="#ffffff"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/from"
            android:layout_toRightOf="@+id/separation2"
            android:imeOptions="actionNext"
            android:textSize="6dp"/>

         <Spinner
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/from"
            android:id="@+id/ampmto"
            android:layout_toRightOf="@id/minuteto"
            android:imeOptions="actionNext"
            android:textSize="6dp"/>
  </RelativeLayout>


    

