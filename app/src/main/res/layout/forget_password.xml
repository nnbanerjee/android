<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/forget_pass_header"
        android:text="Forget Password"
        android:layout_centerHorizontal="true"

        android:layout_marginLeft="25dp"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/email_textViewView"
        android:text="Email ID"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/forget_pass_header"
        android:layout_marginLeft="25dp"
        android:textStyle="bold"
        android:textSize="13dp"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:id="@+id/email"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/email_textViewView"
        android:layout_below="@+id/forget_pass_header"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="75dp"
        android:imeOptions="actionNext"
        android:singleLine="true"
        android:textSize="14dp"
        android:paddingLeft="3dp"
        android:text="cc@gmail.com"
        android:background="@drawable/black_border"
        android:inputType="textEmailAddress"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/or"
        android:text="OR"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/email_textViewView"
        android:layout_marginLeft="25dp"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mobile_textViewView"
        android:layout_below="@+id/or"
        android:text="Mobile No."
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="25dp"
        android:textStyle="bold"
        android:textSize="13dp"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:id="@+id/mobile_no"
        android:layout_alignTop="@+id/mobile_textViewView"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/email"
        android:layout_alignRight="@+id/email"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:text="cc"
        android:paddingLeft="3dp"
        android:background="@drawable/black_border"

        android:inputType="phone"
        android:textSize="14dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/btn_verification"
        android:text="Send Verification Code"
        android:textSize="14dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:padding="2dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_orange_color"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/mobile_no"

     />

</RelativeLayout>