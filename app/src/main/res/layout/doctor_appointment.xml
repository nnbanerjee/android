                android:layout_toRightOf="@+id/shift2DayText"
                android:id="@+id/shift2Days"
                android:textColor="#000000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9:00 AM – 2:45 PM"
                android:textSize="13sp"
                android:layout_toRightOf="@+id/clockIcon2"
                android:layout_below="@+id/shift2DayText"
                android:id="@+id/shift2Time"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginRight="10dp"
                android:textColor="#1E90FF"
                android:textSize="15sp"
                android:id="@+id/bookOnline2"
                android:layout_alignTop="@+id/shift2Time"
                android:layout_toRightOf="@+id/shift2Time"
                android:layout_alignParentRight="true"
                android:text="Book Online"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next Appointment : "
                android:textSize="13sp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="3dp"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/clockIcon"
                android:layout_below="@+id/shift2Time"
                android:id="@+id/nextAppointment2"
                android:textColor="#1E90FF"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12-may-2015  8:15PM"
                android:textSize="13sp"
                android:layout_marginTop="3dp"
                android:layout_below="@+id/nextAppointment2"
                android:layout_marginLeft="40dp"
                android:id="@+id/nextAppointment2Value"
                android:textColor="#1E90FF"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:id="@+id/visited2"
                android:layout_marginRight="10dp"
                android:textColor="#1E90FF"
                android:textSize="15sp"
                android:layout_above="@+id/nextChange2"
                android:layout_marginBottom="10dp"
                android:layout_toLeftOf="@+id/notVisited2"
                android:text="Visited"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:id="@+id/notVisited2"
                android:layout_marginRight="10dp"
                android:textColor="#1E90FF"
                android:textSize="15sp"
                android:layout_marginBottom="10dp"
                android:layout_above="@+id/nextChange2"
                android:layout_alignParentRight="true"
                android:text="Not Visited"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:id="@+id/nextChange2"
                android:layout_marginRight="10dp"
                android:textColor="#1E90FF"
                android:textSize="15sp"
                android:layout_below="@+id/bookOnline2"
                android:layout_toRightOf="@+id/nextAppointment2Value"
                android:layout_alignParentRight="true"
                android:text="Change"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/shift3Layout"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/shift2Layout">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/icon_clock"
                android:id="@+id/clockIcon3"
                />

            <TextView
                android:layout_width="wrap_content"
