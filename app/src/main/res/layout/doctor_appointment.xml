                android:text="Visited"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:id="@+id/notVisited3"
                android:layout_marginRight="10dp"
                android:textColor="#1E90FF"
                android:textSize="15sp"
                android:layout_marginBottom="10dp"
                android:layout_above="@+id/nextChange3"
                android:layout_alignParentRight="true"
                android:text="Not Visited"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:id="@+id/nextChange3"
                android:layout_marginRight="10dp"
                android:textColor="#1E90FF"
                android:textSize="15sp"
                android:layout_below="@+id/bookOnline3"
                android:layout_toRightOf="@+id/nextAppointment3Value"
                android:layout_alignParentRight="true"
                android:text="Change"
                />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:id="@+id/hasNextAppo"
            android:layout_marginRight="10dp"
            android:textColor="#1E90FF"
            android:textSize="15sp"
            android:visibility="gone"
            android:layout_below="@+id/bookOnline3"
            android:layout_toRightOf="@+id/nextAppointment3"
            android:layout_alignParentRight="true"
            android:text="Change"
            />
    </RelativeLayout>
</RelativeLayout>
