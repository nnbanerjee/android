<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Doctor Name "
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/clockIcon"
            android:id="@+id/doctorName"
            android:textColor="#1E90FF"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/shift1Layout"
            android:layout_below="@+id/doctorName"
            android:layout_marginBottom="5dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/icon_clock"
                android:id="@+id/clockIcon"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shift 1 : "
                android:textSize="13sp"
                android:layout_toRightOf="@+id/clockIcon"
                android:id="@+id/shift1DayText"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mon - Sun"
                android:textSize="13sp"
                android:layout_toRightOf="@+id/shift1DayText"
                android:id="@+id/shift1Days"
                android:textColor="#000000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9:00 AM – 2:45 PM"
                android:textSize="13sp"
                android:layout_toRightOf="@+id/clockIcon"
                android:layout_below="@+id/shift1DayText"
                android:id="@+id/shift1Time"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:id="@+id/bookOnline1"
                android:layout_marginRight="10dp"
                android:textColor="#1E90FF"
                android:textSize="15sp"
                android:layout_alignTop="@+id/shift1Time"
                android:layout_toRightOf="@+id/shift1Time"
                android:layout_alignParentRight="true"
                android:text="Book Online"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next Appointment : "
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@+id/clockIcon"
                android:layout_below="@+id/shift1Time"
                android:id="@+id/nextAppointment1"
                android:textColor="#1E90FF"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12-may-2015  8:15PM"
                android:textSize="13sp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="40dp"
                android:layout_below="@+id/nextAppointment1"
                android:id="@+id/nextAppointment1Value"
                android:textColor="#1E90FF"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:id="@+id/visited1"
                android:layout_marginRight="10dp"
                android:textColor="#1E90FF"
                android:textSize="15sp"
                android:layout_above="@+id/nextChange1"
                android:layout_marginBottom="10dp"
                android:layout_toLeftOf="@+id/notVisited1"
                android:text="Visited"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:id="@+id/notVisited1"
                android:layout_marginRight="10dp"
                android:textColor="#1E90FF"
                android:textSize="15sp"
                android:layout_marginBottom="10dp"
                android:layout_above="@+id/nextChange1"
                android:layout_alignParentRight="true"
                android:text="Not Visited"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:id="@+id/nextChange1"
                android:layout_marginRight="10dp"
                android:textColor="#1E90FF"
                android:textSize="15sp"
                android:layout_below="@+id/bookOnline1"
                android:layout_toRightOf="@+id/nextAppointment1Value"
                android:layout_alignParentRight="true"
                android:text="Change"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/shift2Layout"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/shift1Layout">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
