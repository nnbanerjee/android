                android:textSize="13sp"
                android:layout_toRightOf="@+id/shift3DayText"
                android:id="@+id/shift3Days"
                android:textColor="#000000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9:00 AM – 2:45 PM"
                android:textSize="13sp"
                android:layout_toRightOf="@+id/clockIcon3"
                android:layout_below="@+id/shift3DayText"
                android:id="@+id/shift3Time"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginRight="10dp"
                android:textColor="#1E90FF"
                android:textSize="15sp"
                android:id="@+id/bookOnline3"
                android:layout_alignTop="@+id/shift3Time"
                android:layout_toRightOf="@+id/shift3Time"
                android:layout_alignParentRight="true"
                android:text="Book Online"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next Appointment : "
                android:textSize="13sp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="3dp"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/clockIcon"
                android:layout_below="@+id/shift3Time"
                android:id="@+id/nextAppointment3"
                android:textColor="#1E90FF"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12-may-2015  8:15PM"
                android:textSize="13sp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="40dp"
                android:layout_below="@+id/nextAppointment3"
                android:id="@+id/nextAppointment3Value"
