<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    tools:context="com.medicohealthcare.view.home.DoctorHome">

  <android.support.v4.widget.DrawerLayout
      android:id="@+id/drawer_layout"
      android:layout_width="match_parent"
      android:layout_height="fill_parent"
      android:background="#ffffff"
      android:layout_alignParentTop="true"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent">
            <android.support.v7.widget.Toolbar
                android:id="@+id/my_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_blue_default"
                android:visibility="gone"
                android:elevation="4dp">
                <Button
                    android:id="@+id/back_button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:gravity="left"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/arrow_left_summary"
                    android:visibility="visible" />
                <Button
                    android:id="@+id/logout"
                    android:layout_width="30dp"
                    android:layout_height="30dp"

                    android:layout_marginTop="10dp"
                    android:background="@drawable/settings_logout"
                    android:visibility="invisible" />
            </android.support.v7.widget.Toolbar>
            <RelativeLayout
                android:id="@+id/home_layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/my_toolbar"
                android:background="@color/color_blue_default">
                <Button
                    android:id="@+id/refresh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_toLeftOf="@+id/drawar_button"
                    android:visibility="visible"
                    android:background="@drawable/ic_refresh_white_24dp" />
                <Button
                    android:id="@+id/drawar_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_margin="3dp"
                    android:visibility="visible"
                    android:background="@drawable/ic_settings_white_24dp" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/home_layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_blue_default"
                android:layout_below="@+id/home_layout1">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_picture"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/assistant_profile" />
                <TextView
                    android:id="@+id/account_name"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profile_picture"
                    android:layout_centerHorizontal="true"
                    android:text="Assistant Name"
                    style="@style/heading2_white"
                    android:textStyle="bold" />
                <View
                    android:id="@+id/down_arrow"
                    android:layout_width="15dp"
                    android:layout_height="7dp"
                    android:layout_toRightOf="@+id/account_name"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="4dp"
                    android:layout_below="@+id/profile_picture"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/arrow_down_white"
                     />
                <TextView
                    android:id="@+id/status_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:text="@string/doctor_profile"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/account_name"
                    style="@style/body4_white"
                    android:visibility="visible" />

            </RelativeLayout>
            <LinearLayout
                android:id="@+id/notification_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/home_layout2"
                android:background="@color/color_blue_default"
                android:orientation="horizontal"
                android:paddingBottom="3dp"
                android:paddingTop="10dp"
                android:weightSum="1">

                <RelativeLayout
                    android:id="@+id/notification_layout2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/color_blue_default"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:paddingBottom="3dp"
                    android:paddingTop="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0.25">
                    <Button
                        android:id="@+id/alarm_notes"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/alarm_notes" />
                    <TextView
                        android:id="@+id/alarm_notes_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/alarm_notes"
                        android:text="@string/alarm_notes"
                        style="@style/body12_white"
                        android:textStyle="normal" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/notification_layout3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/color_blue_default"
                    android:orientation="vertical"
                    android:paddingBottom="3dp"
                    android:paddingTop="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0.25">
                    <Button
                        android:id="@+id/numberOfMessages"
                        android:textAppearance="@style/body9_white"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:background="@drawable/rounded_red_color"
                        android:layout_alignTop="@+id/chat"
                        android:textColor="@color/medico_white"
                        android:visibility="gone"
                        android:text="23"
                        android:layout_centerHorizontal="true"/>
                    <Button
                        android:id="@+id/chat"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/chat" />
                    <TextView
                        android:id="@+id/chat_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/chat"
                        android:layout_centerHorizontal="true"
                        android:text="@string/chat_message"
                        style="@style/body12_white"
                        android:textStyle="normal" />
                </RelativeLayout>
                <RelativeLayout
                   android:id="@+id/notification_layout4"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:background="@color/color_blue_default"
                   android:orientation="vertical"
                   android:paddingBottom="3dp"
                   android:paddingTop="20dp"
                   android:layout_marginLeft="5dp"
                    android:layout_weight="0.25">
                   <Button
                       android:id="@+id/search_patient"
                       android:layout_width="50dp"
                       android:layout_height="50dp"
                       android:layout_centerHorizontal="true"
                       android:layout_marginLeft="15dp"
                       android:layout_marginTop="5dp"
                       android:background="@drawable/search_patient" />
                   <TextView
                       android:id="@+id/search_patient_text"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_below="@+id/search_patient"
                       android:text="@string/search_patient"
                       android:layout_centerHorizontal="true"
                       style="@style/body12_white"
                       android:textStyle="normal" />
                   </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/notification_layout5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/color_blue_default"
                    android:orientation="vertical"
                    android:paddingBottom="3dp"
                    android:paddingTop="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0.25">
                    <Button
                        android:id="@+id/search_doctor"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/search_doctor" />
                    <TextView
                        android:id="@+id/search_doctor_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/search_doctor"
                        android:text="@string/search_doctor"
                        style="@style/body12_white" />
                </RelativeLayout>
               <RelativeLayout
                   android:id="@+id/notification_layout6"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:background="@color/color_blue_default"
                   android:orientation="vertical"
                   android:paddingBottom="3dp"
                   android:paddingTop="20dp"
                   android:layout_marginLeft="5dp"
                   android:layout_weight="0.25">
                   <Button
                       android:id="@+id/search_clinic"
                       android:layout_width="50dp"
                       android:layout_height="50dp"
                       android:layout_centerHorizontal="true"
                       android:layout_marginLeft="15dp"
                       android:layout_marginTop="5dp"
                       android:background="@drawable/search_clinic" />
                   <TextView
                       android:id="@+id/search_clinic_text"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_centerHorizontal="true"
                       android:layout_below="@+id/search_clinic"
                       android:text="@string/search_clinic_lab"
                       style="@style/body12_white"
                       android:textStyle="normal" />
               </RelativeLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:id="@+id/separation_bar"
                android:layout_below="@id/notification_layout"
                android:background="#ffffff"
                />
            <FrameLayout
                android:id="@+id/content_frame"
                android:layout_width="match_parent"
                android:layout_below="@+id/separation_bar"
                android:layout_height="fill_parent" />
        </RelativeLayout>
        <ListView
            android:id="@+id/left_drawer"
            android:layout_width="240dp"
            android:layout_height="fill_parent"
            android:layout_gravity="start"
            android:background="#F9FDFD"
            android:choiceMode="singleChoice" />
  </android.support.v4.widget.DrawerLayout>
</RelativeLayout>
