<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="#ffffff">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/summary_scroll">

        <RelativeLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="#ffffff">

            <LinearLayout
                android:id="@+id/layout3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout"
                android:layout_centerHorizontal="true"
                android:background="#ffffff"
                android:weightSum="6">

                <Button
                    android:id="@+id/summaryBtn"
                    style="@style/summary"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/square_blue_color"
                    android:gravity="center"
                    android:text="Summary"
                    android:textColor="#ffffff" />

                <Button
                    android:id="@+id/documentationBtn"
                    style="@style/summary"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginRight="2dp"
                    android:layout_toRightOf="@+id/clinicsBtn"
                    android:layout_weight="1"
                    android:background="@drawable/square_grey_color"
                    android:text="Documents" />

                <Button
                    android:id="@+id/doctorNoteBtn"
                    style="@style/summary"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginRight="2dp"
                    android:layout_toRightOf="@+id/clinicsBtn"
                    android:layout_weight="1"
                    android:background="@drawable/square_grey_color"
                    android:gravity="center"
                    android:text="Doctor Note" />

                <Button
                    android:id="@+id/treatmentBtn"
                    style="@style/summary"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginRight="2dp"
                    android:layout_toRightOf="@+id/clinicsBtn"
                    android:layout_weight="1"
                    android:background="@drawable/square_grey_color"
                    android:gravity="center"
                    android:text="Treatment" />

                <Button
                    android:id="@+id/invoicesBtn"
                    style="@style/summary"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_toRightOf="@+id/clinicsBtn"
                    android:layout_weight="1"
                    android:background="@drawable/square_grey_color"
                    android:gravity="center"
                    android:text="Invoices" />
                <Button
                    android:id="@+id/feedback_btn"
                    style="@style/summary"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_toRightOf="@+id/clinicsBtn"
                    android:layout_weight="1"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/square_grey_color"
                    android:gravity="center"
                    android:text="Feedback" />
            </LinearLayout>
        </RelativeLayout>
    </HorizontalScrollView>

    <RelativeLayout
        android:id="@+id/replacementFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/summary_scroll">

    </RelativeLayout>

</RelativeLayout>