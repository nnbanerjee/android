<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout_doctor_basic_info">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:id="@+id/show_image"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/dependecy_icon"/>
        <TextView
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ABC"
            android:textColor="#ffffff"
            android:layout_toRightOf="@+id/show_image"
            android:textStyle="bold"
            android:id="@+id/patient_first_name"
         />


        <TextView
            android:layout_width="wrap_content"
            android:paddingTop="10dp"
            android:id="@+id/patient_location"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/patient_first_name"
            android:paddingLeft="10dp"
            android:textColor="#ffffff"

            android:text="Pune"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/checkbox_id"
            android:layout_marginRight="5dp"/>



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_doctor_speciality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_doctor_basic_info">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:id="@+id/email_show"
            android:textColor="#ffffff"

            android:paddingLeft="10dp"
            android:paddingBottom="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/email_show"
            android:id="@+id/mobile_show"
            android:textColor="#ffffff"

            android:paddingLeft="5dp"
            android:text="9420787814"/>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/layout_doctor_speciality"
        android:id="@+id/access_layout"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Access:"
            android:id="@+id/show_access"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_marginLeft="10dp"
            android:textSize="13dp"/>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_toRightOf="@+id/show_access"
           android:layout_marginLeft="5dp"
           android:textSize="13dp"
           android:textColor="#ffffff"
           android:text="Read Only"
           android:id="@+id/access_level"
        ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="Confirm"
            android:textColor="#ffffff"

            android:id="@+id/status_id"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:layout_toLeftOf="@id/status_id"
            android:text="Status:"
            android:textColor="#ffffff"

            android:layout_marginLeft="5dp"
            android:id="@+id/show_status"
            android:textStyle="bold"/>


    </RelativeLayout>



    <View
        android:layout_marginTop="20dp"
        android:layout_alignBottom="@+id/access_layout"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:id="@+id/show_view_bar"
        android:background="@drawable/startbar"/>

</RelativeLayout>
