<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    <RelativeLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="#ffffff"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"

        android:layout_marginTop="5dp">


        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/person"
            android:id="@+id/personImage"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:textSize="13dp"
            android:id="@+id/upload"
            android:padding="5dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/rounded_orange_color"
            android:layout_toRightOf="@id/personImage"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="5dp"
            android:text="Upload Photo"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name_textViewView"
            android:layout_below="@+id/personImage"
            android:text="Name"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:fontFamily="sans-serif-medium"
            android:textSize="@dimen/body2"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_height="20dp"
            android:layout_below="@+id/personImage"
            android:id="@+id/name"
            android:fontFamily="sans-serif"
            android:textSize="@dimen/body1"
            android:paddingLeft="3dp"
            android:background="@drawable/black_border"
            android:layout_toRightOf="@+id/name_textViewView"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="75dp"
            android:imeOptions="actionNext"
            android:singleLine="true"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/email_textViewView"
            android:layout_below="@+id/name"
            android:text="Email ID"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:fontFamily="sans-serif-medium"
            android:textSize="@dimen/body2"
            android:layout_marginTop="5dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/email"
            android:fontFamily="sans-serif"
            android:textSize="@dimen/body1"
            android:paddingLeft="3dp"
            android:background="@drawable/black_border"
            android:layout_below="@+id/name"
            android:layout_toRightOf="@+id/name_textViewView"
            android:layout_marginTop="5dp"
            android:layout_alignLeft="@+id/name"
            android:layout_alignStart="@+id/name"
            android:layout_alignRight="@+id/name"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            />




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mobile_textViewView"
            android:layout_below="@+id/email_textViewView"
            android:text="Mobile"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:fontFamily="sans-serif-medium"
            android:textSize="@dimen/body2"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_below="@id/email"
            android:id="@+id/postal_code"
            android:layout_toRightOf="@+id/mobile_textViewView"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="5dp"
            android:text="+91"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:fontFamily="sans-serif"
            android:textSize="@dimen/body1"
            android:paddingLeft="3dp"
            android:background="@drawable/black_border"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/mobile"
            android:inputType="number"
            android:layout_marginLeft="50dp"
            android:layout_below="@+id/email"
            android:layout_alignLeft="@+id/postal_code"
            android:layout_alignStart="@+id/postal_code"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/postal_code"
            android:layout_marginTop="5dp"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:fontFamily="sans-serif"
            android:textSize="@dimen/body1"
            android:paddingLeft="3dp"
            android:background="@drawable/black_border"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/genderTV"
            android:layout_below="@+id/mobile"
            android:text="Gender"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:fontFamily="sans-serif-medium"
            android:textSize="@dimen/body2"
            android:layout_marginTop="5dp"
            />
        <RadioGroup
            android:id="@+id/gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/genderTV"
            android:layout_toRightOf="@+id/genderTV"
            android:layout_marginLeft="65dp"
            android:orientation="horizontal"
            >


            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:layout_marginTop="0dp"
                android:id="@+id/gender_male"
                android:checked="true" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:id="@+id/gender_female"
                />


        </RadioGroup>

        <!-- <Spinner
             android:layout_width="wrap_content"
             android:layout_height="20dp"
             android:background="#ffffff"
             android:id="@+id/gender"
             android:layout_below="@+id/mobile"
             android:layout_alignTop="@+id/genderTV"
             android:layout_alignBottom="@+id/gender"
             android:layout_alignLeft="@+id/name"
             android:layout_alignRight="@+id/name"
             android:imeOptions="actionNext"
             android:textSize="14dp"
             />
     -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dobTV"
            android:layout_below="@+id/gender"
            android:text="Date Of Birth"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:fontFamily="sans-serif-medium"
            android:textSize="@dimen/body2"
            android:layout_marginTop="5dp"
            />






        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/locationTV"
            android:layout_below="@+id/textView"
            android:text="Location"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:fontFamily="sans-serif-medium"
            android:textSize="@dimen/body2"
            android:layout_marginTop="10dp"
            />
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/location_button"
            android:background="@drawable/location"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@+id/locationTV"
            android:layout_below="@+id/imageButton_calendar"
        />
        <EditText
            android:layout_width="180dp"
            android:layout_height="20dp"
            android:id="@+id/location"
            android:fontFamily="sans-serif"
            android:textSize="@dimen/body1"
            android:paddingLeft="3dp"
            android:background="@drawable/black_border"
            android:layout_below="@+id/textView"
            android:layout_toRightOf="@+id/location_button"
            android:layout_marginTop="10dp"
            android:imeOptions="actionDone"
            android:singleLine="true"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bloodGroupTV"
            android:layout_below="@+id/location_button"
            android:text="Blood Group"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:fontFamily="sans-serif-medium"
            android:textSize="@dimen/body2"
            android:layout_marginTop="5dp"
            />

        <Spinner
            android:layout_width="fill_parent"
            android:layout_marginRight="10dp"
            android:layout_height="20dp"
            android:id="@+id/bloodGroup"
            android:layout_below="@+id/location_button"
            android:layout_toRightOf="@+id/bloodGroupTV"
            android:layout_marginTop="5dp"
            android:layout_alignLeft="@+id/name"
            android:imeOptions="actionNext"
            android:fontFamily="sans-serif"
            android:textSize="@dimen/body1"
            android:paddingLeft="3dp"
            android:background="@drawable/black_border"
            android:spinnerMode="dropdown"
            />
        <Button
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:id="@+id/add"
            android:layout_below="@id/bloodGroup"
            android:textSize="13dp"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:textColor="@color/white"
            android:layout_marginTop= "40dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_orange_color"
            android:text="Add New"/>
        <Button
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:id="@+id/back"
            android:layout_below="@id/bloodGroup"
            android:textSize="13dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop= "40dp"
            android:layout_marginLeft="220dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_orange_color"
            android:text="Back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textView"
            android:layout_below="@+id/gender"
            android:fontFamily="sans-serif"
            android:textSize="@dimen/body1"
            android:paddingLeft="3dp"
            android:layout_alignLeft="@+id/gender"
            android:layout_alignStart="@+id/gender"
            android:layout_toLeftOf="@+id/imageButton_calendar"
            android:layout_toStartOf="@+id/imageButton_calendar" />
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageButton_calendar"
            android:src="@drawable/cal"
            android:layout_alignTop="@+id/textView"
            android:layout_marginTop="-10dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            />


    </RelativeLayout>
</ScrollView>