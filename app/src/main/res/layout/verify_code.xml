<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/header_thanks"
        android:text="@string/header_verify_code"
        style="@style/body2"
        android:layout_marginTop="32dp"
        android:padding="3dp"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:id="@+id/relative_main"
        android:layout_centerVertical="true"
        android:layout_below="@+id/header_thanks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name_textViewView"
            android:text="Enter SMS Registration code:"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            style="@style/body2"
            android:layout_marginTop="32dp"
        />

        <EditText
            android:layout_width="match_parent"
            android:layout_marginRight="20dp"
            android:layout_height="20dp"
            android:id="@+id/name"
            android:paddingLeft="3dp"
            android:background="@drawable/black_border"
            android:layout_below="@+id/name_textViewView"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="50dp"
            android:imeOptions="actionNext"
            android:singleLine="true"
            style="@style/body1"
         />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/email_textViewView"
            android:layout_below="@+id/name"
            android:text="Email ID:"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="25dp"
            style="@style/body2"
            android:layout_marginTop="19dp"
        />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/email"
            android:paddingLeft="3dp"
            android:background="@drawable/black_border"
            android:layout_below="@+id/email_textViewView"
            android:layout_marginTop="15dp"
            android:layout_alignLeft="@+id/name"
            android:layout_alignStart="@+id/name"
            android:layout_marginRight="20dp"
            android:imeOptions="actionNext"
            android:singleLine="true"
            style="@style/body1"
         />


        <Button
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:id="@+id/done"
            android:text="Confirm"
            android:textStyle="bold"
            android:textSize="14dp"
            android:visibility="gone"
            android:textColor="@color/white"
            android:background="@drawable/rounded_orange_color"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />
        <Button
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:id="@+id/back"
            android:text="Back"
            android:textStyle="bold"
            android:visibility="gone"
            android:textSize="14dp"
            android:textColor="@color/white"
            android:background="@drawable/rounded_orange_color"
            android:layout_marginTop= "40dp"
            android:layout_toRightOf="@id/done"
            android:layout_marginLeft="80dp"
            android:layout_below="@+id/name_textViewView" />

        <Button
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:id="@+id/button"
            android:text="Resend"
            android:textStyle="bold"
            android:textSize="14dp"
            android:textColor="@color/white"
            android:background="@drawable/rounded_orange_color"
            android:layout_alignTop="@+id/name_textViewView"
            android:layout_alignRight="@+id/name"
            android:layout_alignEnd="@+id/name" />

        <Button
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:id="@+id/button2"
            android:text="Resend"
            android:textStyle="bold"
            android:textSize="14dp"
            android:textColor="@color/white"
            android:background="@drawable/rounded_orange_color"
            android:layout_alignTop="@+id/email_textViewView"
            android:layout_alignRight="@+id/email"
            android:layout_alignEnd="@+id/email" />

    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_resend"
        android:padding="3dp"
    android:layout_below="@+id/relative_main"
        android:text="@string/resend_code"
        style="@style/body2"
        android:layout_marginTop="32dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
