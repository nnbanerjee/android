<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/forget_pass_header"
        android:text="Forget Password"
        android:layout_centerHorizontal="true"

        android:layout_marginLeft="25dp"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_verify_code"
        android:text="Enter Verification Code"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/forget_pass_header"
        android:layout_marginLeft="25dp"
        android:textStyle="bold"
        android:textSize="13dp"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:id="@+id/et_verify_code"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/email_textViewView"
        android:layout_below="@+id/tv_verify_code"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="35dp"
        android:imeOptions="actionNext"
        android:singleLine="true"
        android:textSize="14dp"
        android:paddingLeft="3dp"
        android:text="cc@gmail.com"

        android:background="@drawable/black_border"
        android:inputType="textEmailAddress"
        />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/btn_confirm_code"
        android:text="Confirm Code"
        android:textSize="14dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:padding="2dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_orange_color"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/et_verify_code"

     />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/btn_resend_verification"
        android:text="Resend Verification Code"
        android:textSize="14dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:padding="2dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_orange_color"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/btn_confirm_code"

        />

</RelativeLayout>