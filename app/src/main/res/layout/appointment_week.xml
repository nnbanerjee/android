<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9CDBE5">

    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/layout2"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/add"
        android:layout_centerHorizontal="true">
        <Button
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:id="@+id/left_arrow"
            android:textSize="14sp"
            android:layout_toLeftOf="@+id/date_text"
            android:background="@drawable/left_navigation"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/sub_heading"
            android:text="3-july to 10-july-2015"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:id="@+id/date_text"
            />
        <Button
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:id="@+id/right_arrow"
            android:textSize="14sp"
            android:layout_toRightOf="@+id/date_text"
            android:background="@drawable/right_arrow"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout2"
        android:orientation="horizontal"
        android:weightSum="7"
        android:id="@+id/layout3">
        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="29 June"
            android:background="@drawable/square_dark_grey_color"
            android:layout_weight="1"
            android:padding="3dp"
            android:id="@+id/week_day1"
            style="@style/body2"
            />
        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="30 June"
            android:padding="3dp"
            android:background="@drawable/square_dark_grey_color"
            android:layout_weight="1"
            android:id="@+id/week_day2"
            style="@style/body2"
            />
        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="1 July"
            android:padding="3dp"
            android:background="@drawable/square_dark_grey_color"
            android:layout_weight="1"
            android:id="@+id/week_day3"
            style="@style/body2"
            />
        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="2 July"
            android:padding="3dp"
            android:background="@drawable/square_dark_grey_color"
            android:layout_weight="1"
            android:id="@+id/week_day4"
            style="@style/body2"
            />
        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="3 July"
            android:padding="3dp"
            android:background="@drawable/square_dark_grey_color"
            android:layout_weight="1"
            android:id="@+id/week_day5"
            style="@style/body2"
            />
        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="4 July"
            android:padding="3dp"
            android:background="@drawable/square_dark_grey_color"
            android:layout_weight="1"
            android:id="@+id/week_day6"
            style="@style/body2"
            />
        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="5 July"
            android:background="@drawable/square_dark_grey_color"
            android:layout_weight="1"
            android:padding="3dp"
            android:id="@+id/week_day7"
            style="@style/body2"
            />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout3">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SLOT1"
            style="@style/body2"
            android:id="@+id/text_slot1"
            android:layout_margin="15dp"
            android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:id="@+id/slot_layout1"
        android:orientation="horizontal"
        android:layout_below="@+id/text_slot1"
        android:weightSum="7"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="1dp"
      >

         <ListView
             android:layout_width="45dp"
             android:id="@+id/list1"
             android:layout_weight="1"
             android:background="@drawable/square_grey_color"
             android:layout_height="match_parent"
             android:layout_marginRight="-1dp"/>
        <ListView

            android:layout_width="45dp"
            android:id="@+id/list2"
            android:layout_weight="1"
            android:layout_marginRight="-1dp"
            android:layout_toRightOf="@+id/list1"
            android:background="@drawable/square_grey_color"
            android:layout_height="match_parent"/>
        <ListView

            android:layout_width="45dp"
            android:id="@+id/list3"
            android:layout_weight="1"
            android:layout_marginRight="-1dp"
            android:layout_toRightOf="@+id/list2"
            android:background="@drawable/square_grey_color"
            android:layout_height="match_parent"/>
        <ListView

            android:layout_width="45dp"
            android:id="@+id/list4"
            android:layout_weight="1"
            android:layout_marginRight="-1dp"
            android:layout_toRightOf="@+id/list3"
            android:background="@drawable/square_grey_color"
            android:layout_height="match_parent"/>
        <ListView

            android:layout_width="45dp"
            android:id="@+id/list5"
            android:layout_weight="1"
            android:layout_marginRight="-1dp"
            android:layout_toRightOf="@+id/list4"
            android:background="@drawable/square_grey_color"
            android:layout_height="match_parent"/>
        <ListView

            android:layout_width="45dp"
            android:id="@+id/list6"
            android:layout_weight="1"
            android:layout_marginRight="-1dp"
            android:layout_toRightOf="@+id/list5"
            android:background="@drawable/square_grey_color"
            android:layout_height="match_parent"/>
        <ListView

            android:layout_width="50dp"
            android:id="@+id/list7"
            android:layout_weight="1"
            android:layout_toRightOf="@+id/list6"
            android:background="@drawable/square_grey_color"
            android:layout_height="match_parent"/>


    </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SLOT2"
            android:layout_below="@+id/slot_layout1"
            style="@style/body2"
            android:id="@+id/text_slot2"
            android:layout_margin="15dp"
            android:layout_centerHorizontal="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:id="@+id/slot_layout2"
            android:orientation="horizontal"
            android:weightSum="7"
            android:layout_below="@+id/text_slot2"
            >

            <ListView
                android:layout_below="@+id/slot2_text"
                android:layout_width="50dp"
                android:id="@+id/slot2_list1"
                android:layout_weight="1"
                android:background="@drawable/square_grey_color"
                android:layout_height="match_parent"/>
            <ListView
                android:layout_below="@+id/slot2_text"
                android:layout_width="50dp"
                android:id="@+id/slot2_list2"

                android:layout_weight="1"
                android:layout_toRightOf="@+id/slot2_list1"
                android:background="@drawable/square_grey_color"
                android:layout_height="match_parent"/>
            <ListView
                android:layout_below="@+id/slot2_text"
                android:layout_width="50dp"
                android:id="@+id/slot2_list3"
                android:layout_weight="1"
                android:layout_toRightOf="@+id/slot2_list2"
                android:background="@drawable/square_grey_color"
                android:layout_height="match_parent"/>
            <ListView
                android:layout_below="@+id/slot2_text"
                android:layout_width="50dp"
                android:id="@+id/slot2_list4"
                android:layout_weight="1"
                android:layout_toRightOf="@+id/slot2_list3"
                android:background="@drawable/square_grey_color"
                android:layout_height="match_parent"/>
            <ListView
                android:layout_below="@+id/slot2_text"
                android:layout_width="50dp"
                android:id="@+id/slot2_list5"
                android:layout_weight="1"
                android:layout_toRightOf="@+id/slot2_list4"
                android:background="@drawable/square_grey_color"
                android:layout_height="match_parent"/>
            <ListView
                android:layout_below="@+id/slot2_text"
                android:layout_width="50dp"
                android:id="@+id/slot2_list6"
                android:layout_weight="1"
                android:layout_toRightOf="@+id/slot2_list5"
                android:background="@drawable/square_grey_color"
                android:layout_height="match_parent"/>
            <ListView
                android:layout_below="@+id/slot2_text"
                android:layout_width="50dp"
                android:id="@+id/slot2_list7"
                android:layout_weight="1"
                android:layout_toRightOf="@+id/slot2_list6"
                android:background="@drawable/square_grey_color"
                android:layout_height="match_parent"/>


    </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SLOT3"
            android:layout_below="@+id/slot_layout2"
            android:id="@+id/text_slot3"
            android:layout_margin="15dp"
            style="@style/body2"
            android:layout_centerHorizontal="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:id="@+id/slot_layout3"
            android:orientation="horizontal"
            android:weightSum="7"
            android:layout_below="@+id/text_slot3"
            >
            <ListView
                android:layout_below="@+id/slot3_text"
                android:layout_width="50dp"
                android:id="@+id/slot3_list1"
                android:background="@drawable/square_grey_color"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
            <ListView
                android:layout_below="@+id/slot3_text"
                android:layout_width="50dp"
                android:id="@+id/slot3_list2"
                android:layout_weight="1"

                android:layout_toRightOf="@+id/slot3_list1"
                android:background="@drawable/square_grey_color"
                android:layout_height="match_parent"/>
            <ListView
                android:layout_below="@+id/slot3_text"
                android:layout_width="50dp"
                android:id="@+id/slot3_list3"
                android:layout_weight="1"
                android:layout_toRightOf="@+id/slot3_list2"
                android:background="@drawable/square_grey_color"
                android:layout_height="match_parent"/>
            <ListView
                android:layout_below="@+id/slot3_text"
                android:layout_width="50dp"
                android:id="@+id/slot3_list4"
                android:layout_weight="1"
                android:layout_toRightOf="@+id/slot3_list3"
                android:background="@drawable/square_grey_color"
                android:layout_height="match_parent"/>
            <ListView
                android:layout_below="@+id/slot3_text"
                android:layout_width="50dp"
                android:id="@+id/slot3_list5"
                android:layout_weight="1"
                android:layout_toRightOf="@+id/slot3_list4"
                android:background="@drawable/square_grey_color"
                android:layout_height="match_parent"/>
            <ListView
                android:layout_below="@+id/slot3_text"
                android:layout_width="50dp"
                android:id="@+id/slot3_list6"
                android:layout_weight="1"
                android:layout_toRightOf="@+id/slot3_list5"
                android:background="@drawable/square_grey_color"
                android:layout_height="match_parent"/>
            <ListView
                android:layout_below="@+id/slot3_text"
                android:layout_width="50dp"
                android:id="@+id/slot3_list7"
                android:layout_weight="1"
                android:layout_toRightOf="@+id/slot3_list6"
                android:background="@drawable/square_grey_color"
                android:layout_height="match_parent"/>


        </LinearLayout>


    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_below="@+id/layout3"
        android:layout_margin="5dp"
        android:background="#ffffff"
        android:visibility="gone"
        android:layout_height="match_parent"
    />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout3"
        android:background="#ffffff"
        android:layout_margin="5dp"
        android:id="@+id/no_list_element"
        android:visibility="gone"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Appointment Found"
            style="@style/body2"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>
  </RelativeLayout>
</ScrollView>
</RelativeLayout>