<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/home_layout2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/home_layout1">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/personImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/profile_icon_doctor"
                android:layout_marginLeft="10dp" />
        </RelativeLayout>
        <TextView
            android:id="@+id/name_textViewView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/home_layout2"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="Full Name"
            style="@style/textViewThemeForNewDesign"
            />


        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/name_textViewView"
            style="@style/editsmallTextthemeForNewDesign"
            android:imeOptions="actionNext"
            android:hint="Your Name"
            android:inputType="text"

             />

        <TextView
            android:id="@+id/email_textViewView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/name"
            android:layout_marginLeft="15dp"
            android:text="Email ID *"
            style="@style/textViewThemeForNewDesign" />


        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email_textViewView"
            style="@style/editsmallTextthemeForNewDesign"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:hint="YourEmailId@gmail.com"/>
             />

        <TextView
            android:id="@+id/password_textViewView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/email"


            android:text="Password *"
            style="@style/textViewThemeForNewDesign" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/password_textViewView"
             style="@style/editsmallTextthemeForNewDesign"
            android:imeOptions="actionNext"
            android:hint="Password*"
            android:inputType="textPassword"
            />


        <TextView
            android:id="@+id/mobile_textViewView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/password"


            android:text="Mobile *"
            style="@style/textViewThemeForNewDesign" />

        <EditText
            android:id="@+id/mobile_post_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mobile_textViewView"


             style="@style/editsmallTextthemeForNewDesign"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:text="+91"
              />

        <EditText
            android:id="@+id/mobile"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mobile_textViewView"
            android:layout_toRightOf="@id/mobile_post_code"
             style="@style/editsmallTextthemeForNewDesign"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:hint="9890517008"
            android:layout_alignRight="@+id/password"
            android:layout_alignEnd="@+id/password" />


        <TextView
            android:id="@+id/genderTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/mobile"
            android:text="Gender *"
            style="@style/textViewThemeForNewDesign" />

        <RadioGroup
            android:id="@+id/gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/genderTV"
            android:layout_marginLeft="65dp"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/gender_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:checked="true"
                android:text="Male" />
            <RadioButton
                android:id="@+id/gender_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female" />
        </RadioGroup>
        <TextView
            android:id="@+id/dobTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/gender"
            android:text="Date Of Birth*"
            style="@style/textViewThemeForNewDesign" />
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dobTV"
            android:paddingLeft="15dp"
            android:text="09-JAN-1970"
            style="@style/textViewThemeForNewDesign"  />
        <ImageButton
            android:id="@+id/imageButton_calendar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="-10dp"
            android:paddingLeft="10dp"
            android:layout_below="@+id/dobTV"
            android:paddingRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/cal" />
        <TextView
            android:id="@+id/locationTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/textView"
            android:text="Address *"
            style="@style/textViewThemeForNewDesign"/>
        <Button
            android:id="@+id/location_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/locationTV"
            android:layout_marginLeft="15dp"
            android:background="@drawable/loc" />
        <EditText
            android:id="@+id/location"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/locationTV"
            android:layout_marginLeft="5dp"
            android:hint="Address"
            android:layout_toRightOf="@id/location_button"
            style="@style/editsmallTextthemeForNewDesign"
            android:imeOptions="actionDone"
            android:inputType="text"
            />
        <TextView
            android:id="@+id/country_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/location_button"
            android:text="Country *"
            style="@style/textViewThemeForNewDesign" />
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/country_spinner"
            android:layout_marginRight="10dp"
            android:textSize="14dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/country_tv"
        />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/city_tv"
            android:text="City *"
            android:layout_alignParentLeft="true"

            style="@style/textViewThemeForNewDesign"
            android:layout_below="@+id/country_spinner"


            />

        <EditText
            android:id="@+id/city"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/city_tv"
             style="@style/editsmallTextthemeForNewDesign"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:singleLine="true"
            android:hint="City"
         />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bloodGroupTV"
            android:text="Blood Group *"
            android:layout_below="@+id/city"
            style="@style/textViewThemeForNewDesign"
        />
        <Spinner
            android:layout_width="fill_parent"
            android:layout_marginRight="10dp"
            android:layout_height="30dp"
            android:id="@+id/bloodGroup"
             style="@style/editsmallTextthemeForNewDesign"
            android:imeOptions="actionNext"
            android:layout_below="@+id/bloodGroupTV"
            android:spinnerMode="dropdown"
        />
          <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id="@+id/alergicTV"
             android:layout_below="@+id/bloodGroup"
             android:text="Allergic To *"
             style="@style/textViewThemeForNewDesign"
         />
         <EditText
             android:layout_width="match_parent"
             android:layout_height="30dp"
             android:id="@+id/allergic"
              style="@style/editsmallTextthemeForNewDesign"
             android:layout_below="@+id/alergicTV"
             android:imeOptions="actionDone"
             android:singleLine="true"

          />

         <CheckBox
             android:id="@+id/agreeTC"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@id/allergic"
             android:text="Agree to Terms and Conditions"
             android:textColor="#000000"
             />


    </RelativeLayout>
</ScrollView>