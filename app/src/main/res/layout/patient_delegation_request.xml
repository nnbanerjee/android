<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout_doctor_basic_info">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/dependecy_icon"
            android:id="@+id/show_image"/>
        <TextView
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ABC"
            android:textColor="#ffffff"
            android:layout_toRightOf="@+id/show_image"

            android:textStyle="bold"
            android:id="@+id/first_name"
            />

        <TextView
            android:layout_width="wrap_content"
            android:paddingTop="10dp"
            android:id="@+id/location"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/first_name"
            android:paddingLeft="10dp"
            android:textColor="#ffffff"
            android:text="Pune"/>


        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:id="@+id/close_request_delegate"
            android:layout_marginTop="5dp"
            android:background="@drawable/reject"/>
        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_toLeftOf="@+id/close_request_delegate"
            android:background="@drawable/request"
            android:id="@+id/request_button_delegate"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_doctor_speciality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_doctor_basic_info">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:id="@+id/show_email"
            android:textColor="#ffffff"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/show_email"
            android:id="@+id/mobile_show"
            android:textColor="#ffffff"
            android:paddingLeft="5dp"
            android:text="9420787814"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_doctor_speciality"
        android:id="@+id/access_layout"

       >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Access Level:"
            android:id="@+id/show_access_delegate"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_marginLeft="10dp"
            android:textSize="13dp"/>
       <RadioGroup
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@id/show_access_delegate"
           android:id="@+id/radio_access_delegate"
           android:orientation="horizontal">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:textColor="#ffffff"
                android:text="Full Access"
                android:id="@+id/full_access_delegate"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:text="Read Only"
                android:textColor="#ffffff"
                android:id="@+id/read_only_delegate"
                />
           </RadioGroup>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Wait"
            android:layout_alignParentRight="true"
            android:id="@+id/status_id_delegate"
            android:textColor="#ffffff"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:textColor="#ffffff"
            android:text="Status:"
            android:layout_toLeftOf="@id/status_id_delegate"
            android:layout_marginLeft="5dp"
            android:id="@+id/show_status_delegate"
            android:textStyle="bold"/>


    </RelativeLayout>



    <View
        android:layout_marginTop="10dp"
        android:layout_below="@+id/access_layout"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:id="@+id/show_bar"
        android:background="@drawable/startbar"/>

</RelativeLayout>
