<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/main_relative"
          >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clinic Name "
            style="@style/sub_heading"
            android:layout_margin="10dp"
            android:id="@+id/clinicName"
            android:textColor="#1E90FF"/>
        <Button
            android:id="@+id/nextBtn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/right_arrow_black"
            android:textColor="#000000"
            android:visibility="invisible"
            android:layout_marginTop="2dp"
            android:textStyle="bold" />
            </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/locationLayout"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/main_relative">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/location"
                android:id="@+id/locationIcon"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Clinic Location "
                style="@style/caption_Style"
                android:layout_marginLeft="10dp"
                android:textAlignment="center"
                android:layout_toRightOf="@+id/locationIcon"
                android:id="@+id/clinicLocation"
                 />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_margin="5dp"
                android:background="@drawable/calling"
                android:layout_below="@+id/clinicLocation"
                android:id="@+id/contacticon"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact : "
                style="@style/caption_Style"

                android:layout_below="@+id/clinicLocation"
                android:layout_toRightOf="@+id/contacticon"
                android:id="@+id/clinicContactText"
                android:visibility="gone"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Clinic Contact"
                style="@style/caption_Style"
                android:layout_margin="5dp"
                android:layout_below="@+id/clinicLocation"
                android:layout_toRightOf="@+id/clinicContactText"
                android:id="@+id/clinicContact"
                />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/content_linear"
            android:layout_marginBottom="5dp"
            android:orientation="vertical"
                android:layout_below="@+id/locationLayout">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/shift1Layout"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/locationLayout">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/icon_clock"
                android:id="@+id/clockIcon"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Slot 1 : "
                style="@style/body2"
                android:layout_toRightOf="@+id/clockIcon"
                android:id="@+id/shift1DayText"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mon - Sun"
                style="@style/body2"
                android:layout_toRightOf="@+id/shift1DayText"
                android:id="@+id/shift1Days"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9:00 AM â€“ 2:45 PM"
                style="@style/body2"
                android:layout_toRightOf="@+id/clockIcon"
                android:layout_below="@+id/shift1DayText"
                android:id="@+id/shift1Time"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:id="@+id/bookOnline1"
                android:layout_marginRight="10dp"
                android:textColor="#1E90FF"
                style="@style/body1"
                android:layout_alignTop="@+id/shift1Time"
                android:layout_toRightOf="@+id/shift1Time"
                android:layout_alignParentRight="true"
                android:text="Book Online"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Appointment : "
                style="@style/body1"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@+id/clockIcon"
                android:layout_below="@+id/shift1Time"
                android:id="@+id/nextAppointment1"
                android:textColor="#1E90FF"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12-may-2015  8:15PM"
                style="@style/body1"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@+id/nextAppointment1"
                android:layout_below="@+id/shift1Time"
                android:id="@+id/nextAppointment1Value"
                android:textColor="#1E90FF"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:id="@+id/visited1"
                android:layout_marginRight="10dp"
                android:textColor="#1E90FF"
                style="@style/body1"
                android:layout_above="@+id/nextChange1"
                android:layout_marginBottom="5dp"
                android:layout_toLeftOf="@+id/notVisited1"
                android:visibility="gone"
                android:text="Visited"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:id="@+id/notVisited1"
                android:layout_marginRight="10dp"
                android:textColor="#1E90FF"
                style="@style/body1"
                android:layout_marginBottom="5dp"
                android:layout_below="@+id/bookOnline1"
                android:layout_alignParentRight="true"
                android:text="Cancel"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:id="@+id/nextChange1"
                android:layout_marginRight="10dp"
                android:textColor="#1E90FF"
                style="@style/body1"
                android:layout_below="@+id/notVisited1"
                android:layout_toRightOf="@+id/nextAppointment1Value"
                android:layout_alignParentRight="true"
                android:text="Change"
                android:visibility="gone"
                />

        </RelativeLayout>

