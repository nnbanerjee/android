<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="#ffffff"
    >


    <com.mindnerves.meidcaldiary.HorizontalListView
        android:id="@+id/fieldList"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:visibility="gone"
        android:layout_height="60dp" />

    <com.mindnerves.meidcaldiary.HorizontalListView
        android:id="@+id/fieldList1"
        android:layout_below="@+id/fieldList"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_margin="5dp"
        android:layout_height="60dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout1"
        android:layout_margin="5dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/fieldList1">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share with the patient"
            android:id="@+id/share_with_patient"
            style="@style/body1"
            android:textColor="#1E90FF"/>
        <Button
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:textSize="18dp"
            android:textColor="#ffffff"
            android:id="@+id/addNewTreatment"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:background="@drawable/add"/>

    </RelativeLayout>


    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout1"
        android:fadeScrollbars="false"
        android:background="@drawable/black_border_listview"
        android:padding="5dp"
        android:layout_above="@+id/layout2"
        android:id="@+id/treatmentPlanList">

    </ListView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/noDataFound"
        android:visibility="gone"
        android:layout_below="@+id/treatmentPlanList"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="No Data Found !!!"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout2"
        android:paddingTop="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:visibility="gone"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:weightSum="3"
            android:id="@+id/layout3">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:layout_weight="1"
                android:text="Grand Total : "
                />
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:visibility="invisible"
                android:background="@drawable/rounded_black_color"
                android:text="Grand Total : "
                />
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/grandTotal"
                android:background="@drawable/rounded_black_color"
                android:text="420 USD "
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:weightSum="3"
            android:layout_below="@+id/layout3"
            android:id="@+id/layout4">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:layout_weight="1"
                android:text=" (-) Discount  : "
                />
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:id="@+id/percentageDiscount"
                android:background="@drawable/rounded_black_color"
                android:text=" 5% "
                />
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/discountValue"
                android:background="@drawable/rounded_black_color"
                android:text=" 20 USD "
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:weightSum="3"
            android:layout_below="@+id/layout4"
            android:id="@+id/layout5">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:layout_weight="1"
                android:text="(+) Tax  : "
                />
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:id="@+id/percentageTax"
                android:background="@drawable/rounded_black_color"
                android:text="10%"
                />
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/tax"
                android:background="@drawable/rounded_black_color"
                android:text="100 USD "
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:weightSum="3"
            android:layout_below="@+id/layout5"
            android:id="@+id/layout6">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:layout_weight="1"
                android:text=" (-) Advance : "
                />
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:visibility="invisible"
                android:background="@drawable/rounded_black_color"
                android:text="Grand Total : "
                />
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/advance"
                android:background="@drawable/rounded_black_color"
                android:text=" 500 USD "
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:weightSum="3"
            android:layout_below="@+id/layout6"
            android:id="@+id/layout7">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:layout_weight="1"
                android:text=" Total Due : "
                />
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:visibility="invisible"
                android:background="@drawable/rounded_black_color"
                android:text="Grand Total : "
                />
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/totalDue"
                android:background="@drawable/rounded_black_color"
                android:text="0 USD "
                />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>