<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="#ffffff">

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Select Date"
            android:textColor="#000"
            style="@style/sub_heading" />

        <DatePicker
            android:id="@+id/datePicker1"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_below="@+id/text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:calendarViewShown="false"></DatePicker>

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/datePicker1"
            android:gravity="center"
            android:text="Select Time"
            style="@style/sub_heading"
            android:textColor="#000"/>

        <TimePicker
            android:id="@+id/timePicker1"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_below="@+id/text1"
            android:layout_centerHorizontal="true"></TimePicker>

        <TextView
            android:id="@+id/visitTypeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/timePicker1"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:text="Visit Type : "
            style="@style/body2"
            android:textColor="#000"
        />

        <Spinner
            android:id="@+id/visitType"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_below="@+id/timePicker1"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/visitTypeText"
            android:background="@drawable/square_grey_color"
            android:entries="@array/visit_type_list"
            android:prompt="@string/select_visit_type"
            style="@style/body1"
        />

        <TextView
            android:id="@+id/clinic_type_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/visitTypeText"
            android:layout_below="@+id/visitTypeText"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:text="Clinic : "
            style="@style/body2"
            android:textColor="#000"/>

        <Spinner
            android:id="@+id/clinicSpinner"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_below="@+id/visitType"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/clinic_type_text"
            android:background="@drawable/square_grey_color"
            style="@style/body1" />

        <Button
            android:id="@+id/save_appointment"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_below="@+id/clinic_type_text"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/rounded_orange_color"
            android:text="Save"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/cancel_appointment"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/clinic_type_text"
            android:layout_marginRight="30dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/rounded_orange_color"
            android:text="Cancel"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:textStyle="bold"></Button>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@id/cancel_appointment">

        </RelativeLayout>

    </RelativeLayout>
</ScrollView>