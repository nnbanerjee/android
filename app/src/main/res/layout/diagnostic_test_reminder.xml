<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/date_show_text"
            style="@style/body2"
            android:text="Date:"
            android:padding="10dp"
        />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/cal"
            android:layout_alignParentRight="true"
            android:id="@+id/date_time_picker"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
        />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:singleLine="true"
            android:background="@drawable/rounded_white_color"
            android:textSize="@dimen/heading"
            android:imeOptions="actionNext"
            android:paddingLeft="3dp"
            android:editable="false"
            android:id="@+id/date_diagnosis"
            android:layout_toRightOf="@+id/date_show_text"
            android:layout_toLeftOf="@+id/date_time_picker"
        />
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date_show_text"
            android:text="Refer By:"
            style="@style/body2"
            android:id="@+id/refer_by_show"
            android:padding="10dp"
            android:layout_marginTop="20dp"
        />
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:singleLine="true"
            android:layout_marginRight="10dp"
            android:paddingLeft="3dp"
            android:background="@drawable/black_border"
            android:id="@+id/doctor_list"
            android:layout_below="@+id/date_show_text"
            android:layout_toRightOf="@+id/refer_by_show"
            android:layout_marginTop="15dp"
        />
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/refer_by_show"
            android:layout_marginTop="20dp"
            android:text="Clinic:"
            style="@style/body2"
            android:id="@+id/clinic_show"
            android:padding="10dp"
        />
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/doctor_list"
            android:layout_marginRight="10dp"
            android:id="@+id/clinic_list"
            android:background="@drawable/black_border"
            android:layout_toRightOf="@+id/clinic_show"
            android:layout_marginTop="15dp">
        </Spinner>
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/type_show"
            android:text="Type:"
            android:padding="10dp"
            style="@style/body2"
            android:layout_below="@+id/clinic_show"
            android:layout_marginTop="20dp"
        />
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/type_show"
            android:background="@drawable/black_border"
            android:layout_below="@+id/clinic_list"
            android:id="@+id/type_list"
        >
        </Spinner>
        <Button
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:id="@+id/alarm_set"
            android:textSize="@dimen/heading"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:textColor="@color/white"
            android:layout_marginTop= "20dp"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rounded_orange_color"
            android:layout_alignParentBottom="true"
            android:text="Set Alarm"/>
    </RelativeLayout>


</RelativeLayout>
